---
import {
    TREATMENT_SLUGS,
    TECHNOLOGY_SLUGS,
    INSURANCE_SLUGS,
    COMPARE_SLUGS,
    PROTOCOL_SLUGS,
    DEMOGRAPHIC_SLUGS,
    COMMERCIAL_SLUGS,
} from "../utils/seo_slugs";
---

<footer class="bg-[#020617] text-slate-400 py-20 relative overflow-hidden border-t border-white/5 font-sans">
    <!-- Ambient Background Effects -->
    <div class="absolute inset-0 pointer-events-none">
        <div class="absolute -top-[600px] left-1/2 -translate-x-1/2 w-[1200px] h-[1200px] bg-[#5F00C2]/5 rounded-full blur-[150px]"></div>
        <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-[0.03]"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
        
        <!-- Top Section: Brand & Navigation -->
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 mb-20 pt-10">
            
            <!-- Brand Column (Wider for impact) -->
            <div class="lg:col-span-4 space-y-8">
                <a href="/" class="block group">
                    <!-- Logo Integration -->
                    <img src="/logotmslist.png" alt="TMS List" class="h-20 w-auto opacity-90 group-hover:opacity-100 transition-opacity duration-300 mb-6" />
                    
                    <p class="text-sm text-slate-500 font-light leading-relaxed tracking-wide max-w-sm">
                        The definitive clinical directory for deep transcranial magnetic stimulation. Connecting patients with FDA-cleared providers through data-driven transparency.
                    </p>
                </a>

                <!-- Socials (Minimalist) -->
                <div class="flex gap-3">
                     <a href="#" class="w-9 h-9 rounded-full bg-white/5 flex items-center justify-center text-slate-400 hover:bg-white/10 hover:text-white transition-all duration-300">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/></svg>
                     </a>
                     <a href="#" class="w-9 h-9 rounded-full bg-white/5 flex items-center justify-center text-slate-400 hover:bg-white/10 hover:text-white transition-all duration-300">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
                     </a>
                </div>
            </div>

            <!-- Links Grid (Spacious) -->
            <div class="lg:col-span-8 grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12">
                
                <!-- Col 1 -->
                <div class="space-y-6">
                    <h4 class="text-white text-[11px] font-bold uppercase tracking-[0.2em] opacity-40">Treatments</h4>
                    <ul class="space-y-3">
                        {TREATMENT_SLUGS.slice(0, 5).map(item => (
                            <li><a href={`/treatments/${item.slug}/`} class="text-[13px] font-light hover:text-cyan-400 transition-colors duration-300 block">{item.title}</a></li>
                        ))}
                    </ul>
                </div>

                <!-- Col 2 -->
                <div class="space-y-6">
                    <h4 class="text-white text-[11px] font-bold uppercase tracking-[0.2em] opacity-40">Technology</h4>
                    <ul class="space-y-3">
                        {TECHNOLOGY_SLUGS.slice(0, 5).map(item => (
                            <li><a href={`/technology/${item.slug}/`} class="text-[13px] font-light hover:text-cyan-400 transition-colors duration-300 block">{item.title}</a></li>
                        ))}
                    </ul>
                </div>

                <!-- Col 3 -->
                <div class="space-y-6">
                    <h4 class="text-white text-[11px] font-bold uppercase tracking-[0.2em] opacity-40">Resources</h4>
                    <ul class="space-y-3">
                         {INSURANCE_SLUGS.slice(0, 4).map(item => (
                            <li><a href={`/insurance/${item.slug}/`} class="text-[13px] font-light hover:text-cyan-400 transition-colors duration-300 block">{item.title}</a></li>
                        ))}
                        <li><a href="/quiz/am-i-a-candidate/" class="text-[13px] text-cyan-400 hover:text-white transition-colors duration-300 block mt-2">Check Eligibility →</a></li>
                    </ul>
                </div>

                <!-- Col 4 -->
                <div class="space-y-6">
                    <h4 class="text-white text-[11px] font-bold uppercase tracking-[0.2em] opacity-40">Professionals</h4>
                    <ul class="space-y-3">
                         {COMMERCIAL_SLUGS.map(item => (
                            <li><a href={`/providers/services/${item.slug}/`} class="text-[13px] font-light hover:text-cyan-400 transition-colors duration-300 block">{item.title}</a></li>
                        ))}
                         <li><a href="/provider/login/" class="text-[13px] font-light hover:text-cyan-400 transition-colors duration-300 block">Provider Login</a></li>
                    </ul>
                </div>

            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="flex flex-col md:flex-row justify-between items-center gap-6 pt-8 pb-4 border-t border-white/5">
            <p class="text-[11px] text-slate-600 font-light tracking-wide order-2 md:order-1">
                © 2026 TMS List Inc. All rights reserved.
            </p>
            <div class="flex flex-wrap justify-center gap-8 order-1 md:order-2">
                <a href="/legal/privacy/" class="text-[10px] text-slate-500 hover:text-white transition-colors uppercase tracking-widest">Privacy Policy</a>
                <a href="/legal/terms/" class="text-[10px] text-slate-500 hover:text-white transition-colors uppercase tracking-widest">Terms of Service</a>
                <a href="/legal/disclaimer/" class="text-[10px] text-slate-500 hover:text-white transition-colors uppercase tracking-widest">Disclaimer</a>
            </div>
        </div>
        
    </div>
</footer>
