---
import {
    TREATMENT_SLUGS,
    INSURANCE_SLUGS,
    TECHNOLOGY_SLUGS,
    PROTOCOL_SLUGS,
    DEMOGRAPHIC_SLUGS,
    COMPARE_SLUGS,
    PROVIDER_SLUGS,
} from "../utils/seo_slugs";

// Menu structure
const findCare = [
    { href: "/us/", label: "Find a Clinic", icon: "üè•" },
    { href: "/verified-clinics/", label: "Verified Clinics", icon: "‚úì" },
    { href: "/specialists/", label: "Find a Specialist", icon: "üë®‚Äç‚öïÔ∏è" },
    { href: "/compare/", label: "Compare Treatments", icon: "‚öñÔ∏è" },
    { href: "/near-me/tms-near-me", label: "TMS Near Me", icon: "üìç" },
    { href: "/quiz/am-i-a-candidate/", label: "Am I a Candidate?", icon: "‚úÖ" },
];

const conditions = TREATMENT_SLUGS.slice(0, 8);
const insurance = INSURANCE_SLUGS.slice(0, 8);
const technology = [
    ...TECHNOLOGY_SLUGS.slice(0, 6),
    { slug: "exomind", title: "Exomind Wellness" },
];
const protocols = PROTOCOL_SLUGS.slice(0, 5);
const demographics = DEMOGRAPHIC_SLUGS;
---

<header
    class="bg-white/80 backdrop-blur-md border-b border-white/20 sticky top-0 z-[100] transition-all duration-300"
    id="main-header"
>
    <div
        class="container mx-auto px-4 lg:px-8 h-16 flex items-center justify-between"
    >
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3 z-50 group">
            <div class="relative">
                <img
                    src="/logotmslist.png"
                    alt="TMS List Logo"
                    class="relative h-12 w-auto object-contain transition-transform duration-300 group-hover:scale-105"
                />
            </div>
        </a>

        <!-- Desktop Nav -->
        <nav class="hidden lg:flex items-center gap-1 xl:gap-2">
            <!-- Find Care Dropdown -->
            <div class="group relative px-2 py-4">
                <button
                    class="flex items-center gap-1.5 text-sm font-bold text-slate-700 hover:text-indigo-600 transition-colors uppercase tracking-wide group-hover:text-indigo-600"
                >
                    Find Care
                    <svg
                        class="w-4 h-4 text-slate-400 transition-transform duration-300 group-hover:rotate-180 group-hover:text-indigo-500"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2.5"
                            d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>

                <!-- Mega Menu Dropdown -->
                <div
                    class="absolute left-0 top-[85%] pt-4 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform group-hover:translate-y-0 translate-y-2 w-[340px]"
                >
                    <div
                        class="bg-white/95 backdrop-blur-xl rounded-2xl shadow-xl shadow-indigo-900/10 ring-1 ring-black/5 p-2 overflow-hidden border border-white/50"
                    >
                        <div class="p-2 space-y-1">
                            {
                                findCare.map((item) => (
                                    <a
                                        href={item.href}
                                        class="flex items-center gap-4 px-4 py-3 rounded-xl hover:bg-indigo-50/80 transition-all group/item"
                                    >
                                        <span class="flex items-center justify-center w-10 h-10 rounded-lg bg-indigo-100/50 text-xl group-hover/item:bg-indigo-100 group-hover/item:scale-110 transition-all duration-300 shadow-sm">
                                            {item.icon}
                                        </span>
                                        <div>
                                            <div class="font-bold text-slate-800 group-hover/item:text-indigo-700 transition-colors">
                                                {item.label}
                                            </div>
                                            <div class="text-xs text-slate-500 font-medium mt-0.5">
                                                Explore options
                                            </div>
                                        </div>
                                        <svg
                                            class="w-4 h-4 ml-auto text-slate-300 group-hover/item:text-indigo-400 group-hover/item:translate-x-1 transition-all"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M9 5l7 7-7 7"
                                            />
                                        </svg>
                                    </a>
                                ))
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Conditions Mega Menu -->
            <div class="group relative px-2 py-4">
                <a
                    href="/treatments/"
                    class="flex items-center gap-1.5 text-sm font-bold text-slate-700 hover:text-indigo-600 transition-colors uppercase tracking-wide group-hover:text-indigo-600"
                >
                    Conditions
                    <svg
                        class="w-4 h-4 text-slate-400 transition-transform duration-300 group-hover:rotate-180 group-hover:text-indigo-500"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2.5"
                            d="M19 9l-7 7-7-7"></path>
                    </svg>
                </a>

                <div
                    class="absolute left-1/2 -translate-x-1/2 top-[85%] pt-4 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform group-hover:translate-y-0 translate-y-2 w-[600px] max-w-[90vw]"
                >
                    <div
                        class="bg-white/95 backdrop-blur-xl rounded-2xl shadow-xl shadow-indigo-900/10 ring-1 ring-black/5 p-6 border border-white/50"
                    >
                        <div
                            class="flex items-center justify-between mb-4 pb-4 border-b border-indigo-50"
                        >
                            <div>
                                <h3 class="text-lg font-black text-slate-800">
                                    Treatable Conditions
                                </h3>
                                <p
                                    class="text-xs text-slate-500 font-medium mt-1"
                                >
                                    FDA-cleared protocols for mental health
                                </p>
                            </div>
                            <a
                                href="/treatments/"
                                class="text-xs font-bold text-indigo-600 hover:text-indigo-700 bg-indigo-50 hover:bg-indigo-100 px-3 py-1.5 rounded-full transition-colors"
                            >
                                View Full List
                            </a>
                        </div>

                        <div class="grid grid-cols-2 gap-3">
                            {
                                conditions.map((item) => (
                                    <a
                                        href={`/treatments/${item.slug}/`}
                                        class="flex items-center gap-3 p-3 rounded-xl hover:bg-slate-50 transition-all group/item border border-transparent hover:border-slate-100"
                                    >
                                        <div class="w-1.5 h-1.5 rounded-full bg-indigo-300 group-hover/item:bg-indigo-500 transition-colors" />
                                        <span class="text-sm font-bold text-slate-600 group-hover/item:text-slate-900 transition-colors truncate">
                                            {item.title.replace("TMS for ", "")}
                                        </span>
                                    </a>
                                ))
                            }
                        </div>

                        <div
                            class="mt-6 pt-4 border-t border-slate-100 bg-slate-50/50 -mx-6 -mb-6 p-4 rounded-b-2xl"
                        >
                            <div class="flex items-start gap-3">
                                <div
                                    class="w-8 h-8 rounded-full bg-emerald-100 flex items-center justify-center text-emerald-600 shrink-0"
                                >
                                    <svg
                                        class="w-5 h-5"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                        ></path>
                                    </svg>
                                </div>
                                <div>
                                    <p class="text-sm font-bold text-slate-800">
                                        Did you know?
                                    </p>
                                    <p
                                        class="text-xs text-slate-500 mt-1 leading-relaxed"
                                    >
                                        TMS is FDA-cleared for Depression, OCD,
                                        Migraines, and Smoking Cessation with
                                        covered insurance protocols.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Insurance Mega Menu -->
            <div class="group relative px-2 py-4">
                <a
                    href="/insurance/"
                    class="flex items-center gap-1.5 text-sm font-bold text-slate-700 hover:text-indigo-600 transition-colors uppercase tracking-wide group-hover:text-indigo-600"
                >
                    Insurance
                    <svg
                        class="w-4 h-4 text-slate-400 transition-transform duration-300 group-hover:rotate-180 group-hover:text-indigo-500"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2.5"
                            d="M19 9l-7 7-7-7"></path>
                    </svg>
                </a>

                <div
                    class="absolute left-1/2 -translate-x-1/2 top-[85%] pt-4 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform group-hover:translate-y-0 translate-y-2 w-[500px]"
                >
                    <div
                        class="bg-white/95 backdrop-blur-xl rounded-2xl shadow-xl shadow-indigo-900/10 ring-1 ring-black/5 p-6 border border-white/50"
                    >
                        <div
                            class="flex items-center justify-between mb-4 border-b border-gray-100 pb-3"
                        >
                            <h3 class="font-black text-slate-800">
                                Coverage Guides
                            </h3>
                        </div>
                        <div class="grid grid-cols-2 gap-2">
                            {
                                insurance.map((item) => (
                                    <a
                                        href={`/insurance/${item.slug}/`}
                                        class="px-3 py-2.5 text-sm font-medium text-slate-600 hover:text-indigo-700 hover:bg-indigo-50 rounded-lg transition-colors truncate border border-transparent hover:border-indigo-100"
                                    >
                                        {item.title
                                            .replace(" TMS Coverage", "")
                                            .replace(" Coverage for TMS", "")}
                                    </a>
                                ))
                            }
                        </div>
                        <div
                            class="mt-4 pt-4 border-t border-gray-100 text-center"
                        >
                            <a
                                href="/insurance/"
                                class="inline-flex items-center gap-1 text-xs font-bold text-indigo-600 hover:text-indigo-700 uppercase tracking-wider"
                            >
                                Check Your Coverage
                                <svg
                                    class="w-3 h-3"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                                    ></path></svg
                                >
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Technology Mega Menu -->
            <div class="group relative px-2 py-4">
                <a
                    href="/technology/"
                    class="flex items-center gap-1.5 text-sm font-bold text-slate-700 hover:text-indigo-600 transition-colors uppercase tracking-wide group-hover:text-indigo-600"
                >
                    Technology
                    <svg
                        class="w-4 h-4 text-slate-400 transition-transform duration-300 group-hover:rotate-180 group-hover:text-indigo-500"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2.5"
                            d="M19 9l-7 7-7-7"></path>
                    </svg>
                </a>

                <div
                    class="absolute text-left left-1/2 -translate-x-1/2 top-[85%] pt-4 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform group-hover:translate-y-0 translate-y-2 w-[700px] max-w-[90vw]"
                >
                    <div
                        class="bg-white/95 backdrop-blur-xl rounded-2xl shadow-xl shadow-indigo-900/10 ring-1 ring-black/5 p-8 border border-white/50 grid grid-cols-12 gap-8"
                    >
                        <div class="col-span-12 md:col-span-7">
                            <h4
                                class="text-xs font-black text-slate-400 uppercase tracking-widest mb-4 flex items-center gap-2"
                            >
                                <span class="w-8 h-[1px] bg-slate-200"></span>
                                TMS Devices
                            </h4>
                            <div class="grid grid-cols-2 gap-3">
                                {
                                    technology.map((item) => (
                                        <a
                                            href={`/technology/${item.slug}/`}
                                            class="flex flex-col p-3 rounded-xl hover:bg-slate-50 transition-all border border-transparent hover:border-slate-200 group/tech"
                                        >
                                            <span class="text-sm font-bold text-slate-700 group-hover/tech:text-indigo-600">
                                                {item.title}
                                            </span>
                                            <span class="text-[10px] text-slate-400 font-medium uppercase tracking-wide mt-1">
                                                Manufacturer
                                            </span>
                                        </a>
                                    ))
                                }
                            </div>
                        </div>

                        <div class="col-span-12 md:col-span-5 relative">
                            <div
                                class="absolute left-0 top-0 bottom-0 w-[1px] bg-gradient-to-b from-transparent via-slate-200 to-transparent hidden md:block"
                            >
                            </div>
                            <div class="md:pl-8 h-full flex flex-col">
                                <h4
                                    class="text-xs font-black text-slate-400 uppercase tracking-widest mb-4"
                                >
                                    Treatment Protocols
                                </h4>
                                <div class="space-y-1 flex-grow">
                                    {
                                        protocols.map((item) => (
                                            <a
                                                href={`/protocols/${item.slug}/`}
                                                class="flex items-center justify-between px-3 py-2 text-sm text-slate-600 hover:text-indigo-700 hover:bg-indigo-50 rounded-lg transition-colors group/proto"
                                            >
                                                <span class="font-medium">
                                                    {item.title}
                                                </span>
                                                <svg
                                                    class="w-3 h-3 opacity-0 -translate-x-1 group-hover/proto:opacity-100 group-hover/proto:translate-x-0 transition-all text-indigo-400"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M9 5l7 7-7 7"
                                                    />
                                                </svg>
                                            </a>
                                        ))
                                    }
                                </div>
                                <div
                                    class="mt-6 pt-4 border-t border-slate-100"
                                >
                                    <a
                                        href="/compare/neurostar-vs-brainsway/"
                                        class="block w-full py-2.5 text-center text-xs font-bold text-white bg-slate-900 rounded-lg hover:bg-slate-800 transition-colors shadow-lg shadow-slate-900/20"
                                    >
                                        Compare Devices
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Patients Dropdown -->
            <div class="group relative px-2 py-4">
                <a
                    href="/demographic/"
                    class="flex items-center gap-1.5 text-sm font-bold text-slate-700 hover:text-indigo-600 transition-colors uppercase tracking-wide group-hover:text-indigo-600"
                >
                    Patients
                    <svg
                        class="w-4 h-4 text-slate-400 transition-transform duration-300 group-hover:rotate-180 group-hover:text-indigo-500"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2.5"
                            d="M19 9l-7 7-7-7"></path>
                    </svg>
                </a>

                <div
                    class="absolute right-0 top-[85%] pt-4 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform group-hover:translate-y-0 translate-y-2 w-64"
                >
                    <div
                        class="bg-white/95 backdrop-blur-xl rounded-2xl shadow-xl shadow-indigo-900/10 ring-1 ring-black/5 p-2 overflow-hidden border border-white/50"
                    >
                        {
                            demographics.map((item) => (
                                <a
                                    href={`/demographic/${item.slug}/`}
                                    class="block px-4 py-2.5 text-sm font-medium text-slate-600 hover:text-indigo-600 hover:bg-slate-50 rounded-lg transition-colors"
                                >
                                    {item.title}
                                </a>
                            ))
                        }
                    </div>
                </div>
            </div>
            <!-- Provider Link -->
            <a
                href="/providers/"
                class="px-3 py-2 text-sm font-bold text-slate-500 hover:text-indigo-600 transition-colors uppercase tracking-wide ml-2 border-l border-slate-200 pl-5"
            >
                Providers
            </a>
        </nav>

        <!-- CTA -->
        <div class="flex items-center gap-4">
            <a
                href="/add-listing/"
                class="hidden sm:inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-indigo-600 via-blue-600 to-cyan-600 hover:from-indigo-700 hover:via-blue-700 hover:to-cyan-700 text-white text-sm font-black tracking-wide rounded-xl shadow-lg shadow-indigo-500/30 hover:shadow-indigo-500/40 transition-all hover:-translate-y-0.5"
            >
                List Your Clinic
            </a>
            <button
                class="lg:hidden p-2 text-slate-600 hover:text-indigo-600 transition-colors"
                id="mobile-menu-btn"
            >
                <svg
                    class="w-7 h-7"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>
</header>

<!-- Mobile Menu Panel -->
<div
    id="mobile-menu"
    class="fixed inset-0 z-[100] bg-black/50 opacity-0 invisible transition-opacity duration-300 lg:hidden"
>
    <div
        id="mobile-menu-panel"
        class="absolute right-0 top-0 h-full w-80 max-w-full bg-white shadow-2xl transform translate-x-full transition-transform duration-300"
    >
        <div
            class="flex items-center justify-between p-4 border-b border-gray-100"
        >
            <span class="text-lg font-bold text-gray-900">Menu</span>
            <button
                id="mobile-menu-close"
                class="p-2 text-gray-500 hover:text-gray-900"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"></path></svg
                >
            </button>
        </div>
        <nav class="p-4 space-y-2">
            <a
                href="/us/"
                class="block px-4 py-3 text-gray-700 font-medium hover:bg-indigo-50 hover:text-indigo-600 rounded-xl transition-colors"
                >Find a Clinic</a
            >
            <a
                href="/specialists/"
                class="block px-4 py-3 text-gray-700 font-medium hover:bg-indigo-50 hover:text-indigo-600 rounded-xl transition-colors"
                >Find a Specialist</a
            >
            <a
                href="/treatments/"
                class="block px-4 py-3 text-gray-700 font-medium hover:bg-indigo-50 hover:text-indigo-600 rounded-xl transition-colors"
                >Conditions</a
            >
            <a
                href="/insurance/"
                class="block px-4 py-3 text-gray-700 font-medium hover:bg-indigo-50 hover:text-indigo-600 rounded-xl transition-colors"
                >Insurance</a
            >
            <a
                href="/technology/"
                class="block px-4 py-3 text-gray-700 font-medium hover:bg-indigo-50 hover:text-indigo-600 rounded-xl transition-colors"
                >Technology</a
            >
            <a
                href="/demographic/"
                class="block px-4 py-3 text-gray-700 font-medium hover:bg-indigo-50 hover:text-indigo-600 rounded-xl transition-colors"
                >Patients</a
            >
            <a
                href="/quiz/am-i-a-candidate/"
                class="block px-4 py-3 text-gray-700 font-medium hover:bg-indigo-50 hover:text-indigo-600 rounded-xl transition-colors"
                >Am I a Candidate?</a
            >
            <div class="pt-4 mt-4 border-t border-gray-100">
                <a
                    href="/add-listing/"
                    class="block w-full text-center px-4 py-3 bg-indigo-600 text-white font-bold rounded-xl hover:bg-indigo-700 transition-colors"
                    >List Your Clinic</a
                >
            </div>
        </nav>
    </div>
</div>

<script>
    const mobileMenuBtn = document.getElementById("mobile-menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");
    const mobileMenuPanel = document.getElementById("mobile-menu-panel");
    const mobileMenuClose = document.getElementById("mobile-menu-close");

    function openMenu() {
        mobileMenu?.classList.remove("opacity-0", "invisible");
        mobileMenu?.classList.add("opacity-100", "visible");
        mobileMenuPanel?.classList.remove("translate-x-full");
        document.body.style.overflow = "hidden";
    }

    function closeMenu() {
        mobileMenu?.classList.add("opacity-0", "invisible");
        mobileMenu?.classList.remove("opacity-100", "visible");
        mobileMenuPanel?.classList.add("translate-x-full");
        document.body.style.overflow = "";
    }

    mobileMenuBtn?.addEventListener("click", openMenu);
    mobileMenuClose?.addEventListener("click", closeMenu);
    mobileMenu?.addEventListener("click", (e) => {
        if (e.target === mobileMenu) closeMenu();
    });
</script>
