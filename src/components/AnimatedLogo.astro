---
// Animated Logo Component
---

<a href="/" class="flex items-center gap-2.5 z-50 group">
    <div class="logo-container relative">
        <!-- Animated glow ring -->
        <div class="absolute inset-0 rounded-xl bg-gradient-to-br from-indigo-500 to-cyan-500 opacity-0 group-hover:opacity-100 blur-lg transition-opacity duration-500"></div>
        
        <!-- Main logo -->
        <div class="relative w-10 h-10 rounded-xl bg-gradient-to-br from-indigo-600 via-blue-600 to-cyan-500 flex items-center justify-center shadow-lg shadow-indigo-200 overflow-hidden">
            <!-- Pulse animation background -->
            <div class="absolute inset-0 bg-gradient-to-br from-indigo-400 to-cyan-400 animate-pulse-slow opacity-0 group-hover:opacity-50"></div>
            
            <!-- Brain wave pattern -->
            <svg class="absolute inset-0 w-full h-full opacity-20" viewBox="0 0 40 40">
                <path 
                    d="M5 20 Q10 10, 15 20 T25 20 T35 20" 
                    stroke="white" 
                    stroke-width="1.5" 
                    fill="none"
                    class="brain-wave"
                />
                <path 
                    d="M5 25 Q10 15, 15 25 T25 25 T35 25" 
                    stroke="white" 
                    stroke-width="1" 
                    fill="none"
                    class="brain-wave delay-1"
                />
            </svg>
            
            <!-- TMS text -->
            <span class="relative text-white font-black text-lg tracking-tight">T</span>
        </div>
    </div>
    
    <div class="flex flex-col">
        <span class="text-lg font-black text-gray-900 tracking-tight leading-none group-hover:text-indigo-600 transition-colors">TMS List</span>
        <span class="text-[9px] text-indigo-600 font-bold tracking-widest leading-none mt-0.5">VERIFIED DIRECTORY</span>
    </div>
</a>

<style>
    @keyframes brain-wave {
        0%, 100% {
            d: path("M5 20 Q10 10, 15 20 T25 20 T35 20");
        }
        50% {
            d: path("M5 20 Q10 30, 15 20 T25 20 T35 20");
        }
    }
    
    @keyframes pulse-slow {
        0%, 100% {
            opacity: 0;
        }
        50% {
            opacity: 0.5;
        }
    }
    
    .brain-wave {
        animation: brain-wave 2s ease-in-out infinite;
    }
    
    .brain-wave.delay-1 {
        animation-delay: 0.5s;
    }
    
    .animate-pulse-slow {
        animation: pulse-slow 3s ease-in-out infinite;
    }
    
    .logo-container:hover .brain-wave {
        animation-duration: 1s;
    }
</style>
