---
interface Props {
    city: string;
    state: string;
    clinics: any[];
}

const { city, state, clinics } = Astro.props;

// Get top 10 clinics by rating
const topClinics = clinics
    .filter((c) => c.verified && c.operational)
    .sort((a, b) => (b.averageRating || 0) - (a.averageRating || 0))
    .slice(0, 10);

const formatPhone = (phone: string) => {
    if (!phone) return "";
    const cleaned = phone.replace(/\D/g, "");
    if (cleaned.length === 10) {
        return `(${cleaned.slice(0, 3)}) ${cleaned.slice(3, 6)}-${cleaned.slice(6)}`;
    }
    return phone;
};
---

<section
    class="bg-gradient-to-br from-indigo-50 to-blue-50 rounded-2xl p-8 my-12"
>
    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-10">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                üèÜ Top 10 TMS Clinics in {city}
            </h2>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                Ranked by patient reviews, ratings, and verification status. All
                clinics are FDA-cleared and insurance-friendly.
            </p>
        </div>

        <div class="grid gap-6">
            {
                topClinics.map((clinic, index) => (
                    <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all p-6 border-2 border-transparent hover:border-indigo-200">
                        <div class="flex items-start justify-between gap-4">
                            {/* Rank Badge */}
                            <div class="flex-shrink-0">
                                <div
                                    class={`w-12 h-12 rounded-full flex items-center justify-center text-xl font-bold ${
                                        index === 0
                                            ? "bg-gradient-to-br from-yellow-400 to-yellow-600 text-white"
                                            : index === 1
                                              ? "bg-gradient-to-br from-gray-300 to-gray-500 text-white"
                                              : index === 2
                                                ? "bg-gradient-to-br from-orange-400 to-orange-600 text-white"
                                                : "bg-indigo-100 text-indigo-700"
                                    }`}
                                >
                                    #{index + 1}
                                </div>
                            </div>

                            {/* Clinic Info */}
                            <div class="flex-1">
                                <div class="flex items-start justify-between mb-3">
                                    <div>
                                        <h3 class="text-xl font-bold text-gray-900 mb-1">
                                            <a
                                                href={`/clinic/${clinic.id}/`}
                                                class="hover:text-indigo-600 transition-colors"
                                            >
                                                {clinic.name}
                                            </a>
                                        </h3>
                                        <p class="text-sm text-gray-600">
                                            {clinic.address}
                                        </p>
                                    </div>

                                    {/* Rating */}
                                    {clinic.averageRating && (
                                        <div class="text-right">
                                            <div class="flex items-center gap-1">
                                                <span class="text-2xl font-bold text-indigo-600">
                                                    {clinic.averageRating.toFixed(
                                                        1,
                                                    )}
                                                </span>
                                                <svg
                                                    class="w-6 h-6 text-yellow-400 fill-current"
                                                    viewBox="0 0 20 20"
                                                >
                                                    <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z" />
                                                </svg>
                                            </div>
                                            <span class="text-xs text-gray-500">
                                                {clinic.totalReviews || 0}{" "}
                                                reviews
                                            </span>
                                        </div>
                                    )}
                                </div>

                                {/* Badges */}
                                <div class="flex flex-wrap gap-2 mb-3">
                                    {clinic.verified && (
                                        <span class="px-3 py-1 bg-green-100 text-green-700 text-xs font-semibold rounded-full flex items-center gap-1">
                                            <svg
                                                class="w-4 h-4"
                                                fill="currentColor"
                                                viewBox="0 0 20 20"
                                            >
                                                <path
                                                    fill-rule="evenodd"
                                                    d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                                    clip-rule="evenodd"
                                                />
                                            </svg>
                                            Verified
                                        </span>
                                    )}
                                    {clinic.acceptsMedicare && (
                                        <span class="px-3 py-1 bg-blue-100 text-blue-700 text-xs font-semibold rounded-full">
                                            Medicare
                                        </span>
                                    )}
                                    {clinic.acceptsMedicaid && (
                                        <span class="px-3 py-1 bg-purple-100 text-purple-700 text-xs font-semibold rounded-full">
                                            Medicaid
                                        </span>
                                    )}
                                </div>

                                {/* CTA */}
                                <div class="flex gap-3">
                                    <a
                                        href={`/clinic/${clinic.id}/`}
                                        class="px-4 py-2 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition-colors text-sm"
                                    >
                                        View Profile
                                    </a>
                                    {clinic.phone && (
                                        <a
                                            href={`tel:${clinic.phone}`}
                                            class="px-4 py-2 border-2 border-indigo-600 text-indigo-600 font-semibold rounded-lg hover:bg-indigo-50 transition-colors text-sm"
                                        >
                                            üìû {formatPhone(clinic.phone)}
                                        </a>
                                    )}
                                </div>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>

        {
            topClinics.length === 0 && (
                <div class="text-center py-12">
                    <p class="text-gray-600">
                        No verified clinics found in {city}. Check back soon!
                    </p>
                </div>
            )
        }
    </div>
</section>
