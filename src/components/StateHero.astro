---
interface Props {
  stateName: string;
  clinicCount: number;
}

const { stateName, clinicCount } = Astro.props;
---

<section class="bg-surface-subtle border-b border-gray-200 py-12 md:py-20">
    <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-4 tracking-tight">
            Top TMS Clinics in <span class="text-primary">{stateName}</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Browse {clinicCount} verified providers specializing in depression and mental health therapy across {stateName}.
        </p>
    </div>
</section>
