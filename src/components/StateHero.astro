---
interface Props {
    stateName: string;
    clinicCount: number;
}

const { stateName, clinicCount } = Astro.props;
---

<section
    class="relative bg-gradient-to-br from-slate-900 via-indigo-900 to-blue-900 py-20 md:py-28 overflow-hidden"
>
    <!-- Decorative Elements -->
    <div class="absolute inset-0 opacity-30">
        <div
            class="absolute top-0 right-1/4 w-96 h-96 bg-indigo-500 rounded-full blur-[120px]"
        >
        </div>
        <div
            class="absolute bottom-0 left-1/4 w-72 h-72 bg-cyan-500 rounded-full blur-[100px]"
        >
        </div>
    </div>
    <div
        class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-[size:60px_60px]"
    >
    </div>

    <div class="container mx-auto px-6 relative z-10 text-center">
        <!-- Pill Badge -->
        <div
            class="inline-flex items-center gap-2 bg-white/10 backdrop-blur border border-white/20 rounded-full py-2 px-5 mb-8"
        >
            <span class="relative flex h-2 w-2">
                <span
                    class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"
                ></span>
                <span
                    class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"
                ></span>
            </span>
            <span class="text-sm font-bold text-white/90 tracking-wide"
                >{clinicCount} Verified Clinics</span
            >
        </div>

        <h1
            class="text-4xl md:text-6xl lg:text-7xl font-black text-white mb-6 tracking-tight leading-tight"
        >
            Top TMS Clinics in <br class="md:hidden" />
            <span
                class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 via-blue-400 to-indigo-400"
                >{stateName}</span
            >
        </h1>

        <p
            class="text-xl md:text-2xl text-blue-100/80 max-w-3xl mx-auto mb-10 leading-relaxed font-light"
        >
            Browse {clinicCount} verified TMS therapy providers specializing in depression
            and mental health treatment across {stateName}.
        </p>

        <!-- Quick Actions -->
        <div class="flex flex-wrap justify-center gap-4">
            <a
                href="#clinics"
                class="px-8 py-4 bg-white text-indigo-600 font-bold rounded-2xl shadow-xl shadow-black/20 hover:-translate-y-0.5 transition-all"
            >
                View All Clinics
            </a>
            <a
                href="/quiz/am-i-a-candidate/"
                class="px-8 py-4 bg-white/10 backdrop-blur border border-white/20 text-white font-bold rounded-2xl hover:bg-white/20 transition-all"
            >
                Am I a Candidate?
            </a>
        </div>
    </div>
</section>
