---
import { type Clinic } from "../types/clinic";
import {
    getClinicRating,
    getClinicReviewCount,
    getClinicPhoto,
} from "../utils/dataHelpers";

interface Props {
    clinic: Clinic;
}

const { clinic } = Astro.props;
const rating = getClinicRating(clinic);
const reviewCount = getClinicReviewCount(clinic);
const mainImage = getClinicPhoto(clinic);

// Trust Signals (Mocked for Demo Purpose based on verified status)
const isVerified = clinic.verified;
---

<article
    class="group bg-white rounded-2xl border border-gray-100 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 overflow-hidden flex flex-col h-full"
>
    <!-- Image Header -->
    <div class="relative h-56 overflow-hidden">
        <img
            src={mainImage}
            alt={clinic.name}
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
            loading="lazy"
        />
        <div
            class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-80"
        >
        </div>

        <!-- Badges -->
        <div class="absolute top-4 left-4 flex flex-wrap gap-2">
            {
                isVerified && (
                    <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-white/95 backdrop-blur text-xs font-bold text-indigo-700 shadow-sm border border-indigo-100">
                        <svg
                            class="w-3.5 h-3.5 text-blue-500"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                clip-rule="evenodd"
                            />
                        </svg>
                        Verified Clinic
                    </span>
                )
            }
            {
                clinic.provider_type && (
                    <span class="inline-flex items-center px-3 py-1 rounded-full bg-slate-900/80 backdrop-blur text-xs font-bold text-white shadow-sm border border-white/10">
                        {clinic.provider_type}
                    </span>
                )
            }
        </div>

        <!-- Rating Overlay & Location -->
        <div class="absolute bottom-4 left-4 right-4 text-white">
            <h3
                class="font-bold text-lg leading-tight mb-1.5 drop-shadow-md line-clamp-2"
            >
                {clinic.name}
            </h3>
            <p
                class="text-sm text-indigo-100 opacity-95 flex items-center gap-1.5 font-medium"
            >
                <svg
                    class="w-4 h-4 shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
                >
                {clinic.city}, {clinic.state}
            </p>
        </div>
    </div>

    <!-- Content Body -->
    <div class="p-5 flex-1 flex flex-col">
        <!-- Trust Stats Row -->
        <div
            class="flex items-center gap-4 mb-5 text-xs font-medium text-gray-500 border-b border-gray-50 pb-4"
        >
            <div
                class="flex items-center gap-1.5 text-emerald-700 bg-emerald-50 px-2 py-1 rounded-md border border-emerald-100"
            >
                <svg
                    class="w-3.5 h-3.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                    ></path></svg
                >
                FDA Cleared
            </div>
            <div class="flex items-center gap-1.5 px-2 py-1">
                <svg
                    class="w-4 h-4 text-amber-400"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    ><path
                        d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                    ></path></svg
                >
                <span class="text-gray-900 font-bold text-sm"
                    >{rating.toFixed(1)}</span
                >
                <span class="text-gray-400">({reviewCount})</span>
            </div>
        </div>

        <!-- Features List -->
        <div class="space-y-3 mb-6 flex-1">
            <div class="flex items-start gap-2.5">
                <div
                    class="w-5 h-5 rounded-full bg-indigo-50 flex items-center justify-center shrink-0 mt-0.5"
                >
                    <svg
                        class="w-3 h-3 text-indigo-600"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg
                    >
                </div>
                <p class="text-xs text-gray-600 line-clamp-2 leading-relaxed">
                    <span class="font-bold text-gray-900 block mb-0.5"
                        >Technology</span
                    >
                    {(clinic.machines || []).join(", ") || "Standard TMS"}
                </p>
            </div>
            <div class="flex items-start gap-2.5">
                <div
                    class="w-5 h-5 rounded-full bg-blue-50 flex items-center justify-center shrink-0 mt-0.5"
                >
                    <svg
                        class="w-3 h-3 text-blue-600"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 011.414.586l4 4a1 1 0 01.586 1.414V19a2 2 0 01-2 2z"
                        ></path></svg
                    >
                </div>
                <p class="text-xs text-gray-600 line-clamp-2 leading-relaxed">
                    <span class="font-bold text-gray-900 block mb-0.5"
                        >Insurance accepted</span
                    >
                    {(clinic.insurances || []).slice(0, 3).join(", ")}
                    {(clinic.insurances?.length || 0) > 3 ? " + more" : ""}
                </p>
            </div>
        </div>

        <!-- CTA Actions -->
        <div class="mt-auto flex gap-3">
            <a
                href={`/clinic/${clinic.slug}`}
                class="flex-1 text-center py-2.5 px-4 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-bold rounded-xl transition-all shadow-md shadow-indigo-100 hover:shadow-indigo-200"
            >
                View Profile
            </a>
            <a
                href={`tel:${clinic.phone}`}
                class="px-3.5 py-2.5 bg-gray-50 hover:bg-gray-100 text-gray-700 rounded-xl transition-colors border border-gray-200"
                aria-label="Call Clinic"
            >
                <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path></svg
                >
            </a>
        </div>
    </div>
</article>
