---
interface Props {
    entityName: string;
    entityType: 'clinic' | 'specialist';
    entitySlug: string;
}

const { entityName, entityType, entitySlug } = Astro.props;
---

<section class="py-12 bg-gradient-to-br from-indigo-50 to-blue-50 rounded-2xl border border-indigo-100">
    <div class="px-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-2">Share Your Experience</h2>
        <p class="text-gray-500 mb-8">Help others by sharing your experience with {entityName}</p>
        
        <form id="review-form" class="space-y-6">
            <input type="hidden" name="entityType" value={entityType} />
            <input type="hidden" name="entitySlug" value={entitySlug} />
            <input type="hidden" name="entityName" value={entityName} />
            
            <!-- Name -->
            <div>
                <label for="reviewer-name" class="block text-sm font-bold text-gray-700 mb-2">Your Name *</label>
                <input 
                    type="text" 
                    id="reviewer-name" 
                    name="name" 
                    required
                    maxlength="50"
                    placeholder="e.g., John D."
                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-indigo-500 focus:border-transparent bg-white"
                />
                <p class="text-xs text-gray-400 mt-1">Only your first name and last initial will be shown</p>
            </div>
            
            <!-- Email -->
            <div>
                <label for="reviewer-email" class="block text-sm font-bold text-gray-700 mb-2">Email Address *</label>
                <input 
                    type="email" 
                    id="reviewer-email" 
                    name="email" 
                    required
                    placeholder="your@email.com"
                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-indigo-500 focus:border-transparent bg-white"
                />
                <p class="text-xs text-gray-400 mt-1">Your email will not be published</p>
            </div>
            
            <!-- Rating -->
            <div>
                <label class="block text-sm font-bold text-gray-700 mb-2">Your Rating *</label>
                <div class="flex gap-2" id="star-rating">
                    {[1, 2, 3, 4, 5].map(star => (
                        <button 
                            type="button" 
                            data-rating={star}
                            class="star-btn w-12 h-12 rounded-xl border-2 border-gray-200 text-2xl text-gray-300 hover:border-yellow-400 hover:text-yellow-400 transition-all focus:outline-none focus:ring-2 focus:ring-yellow-400"
                        >
                            ★
                        </button>
                    ))}
                </div>
                <input type="hidden" name="rating" id="rating-value" required />
            </div>
            
            <!-- Treatment Type -->
            <div>
                <label for="treatment-type" class="block text-sm font-bold text-gray-700 mb-2">What were you treated for?</label>
                <select 
                    id="treatment-type" 
                    name="treatmentType"
                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-indigo-500 focus:border-transparent bg-white"
                >
                    <option value="">Select condition (optional)</option>
                    <option value="depression">Depression</option>
                    <option value="anxiety">Anxiety</option>
                    <option value="ocd">OCD</option>
                    <option value="ptsd">PTSD</option>
                    <option value="other">Other</option>
                </select>
            </div>
            
            <!-- Review Text -->
            <div>
                <label for="review-text" class="block text-sm font-bold text-gray-700 mb-2">Your Review *</label>
                <textarea 
                    id="review-text" 
                    name="review" 
                    required
                    minlength="50"
                    maxlength="1000"
                    rows="5"
                    placeholder="Please share your experience. What did you like? How was the staff? Did it help with your condition?"
                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-indigo-500 focus:border-transparent bg-white resize-none"
                ></textarea>
                <p class="text-xs text-gray-400 mt-1">Minimum 50 characters. No URLs allowed.</p>
            </div>
            
            <!-- Submit -->
            <div class="flex items-center justify-between pt-4">
                <p class="text-xs text-gray-400 max-w-xs">
                    By submitting, you agree to our review guidelines. Reviews are moderated before publishing.
                </p>
                <button 
                    type="submit" 
                    class="px-8 py-3 bg-indigo-600 text-white font-bold rounded-xl hover:bg-indigo-700 transition-colors shadow-lg shadow-indigo-200"
                >
                    Submit Review
                </button>
            </div>
        </form>
        
        <!-- Success Message -->
        <div id="review-success" class="hidden text-center py-12">
            <div class="w-16 h-16 rounded-full bg-emerald-100 text-emerald-600 flex items-center justify-center mx-auto mb-4 text-3xl">✓</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Thank You!</h3>
            <p class="text-gray-500">Your review has been submitted and is pending moderation.</p>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('review-form') as HTMLFormElement;
        const starBtns = document.querySelectorAll('.star-btn');
        const ratingInput = document.getElementById('rating-value') as HTMLInputElement;
        const reviewText = document.getElementById('review-text') as HTMLTextAreaElement;
        const successMsg = document.getElementById('review-success');
        
        let selectedRating = 0;
        
        // Star rating selection
        starBtns.forEach((btn: any) => {
            btn.addEventListener('click', () => {
                selectedRating = parseInt(btn.dataset.rating);
                ratingInput.value = selectedRating.toString();
                
                starBtns.forEach((b: any, i: number) => {
                    if (i < selectedRating) {
                        b.classList.add('border-yellow-400', 'text-yellow-400', 'bg-yellow-50');
                        b.classList.remove('border-gray-200', 'text-gray-300');
                    } else {
                        b.classList.remove('border-yellow-400', 'text-yellow-400', 'bg-yellow-50');
                        b.classList.add('border-gray-200', 'text-gray-300');
                    }
                });
            });
        });
        
        // URL detection and blocking
        const urlPattern = /(https?:\/\/|www\.|\.com|\.net|\.org|\.io|\.co)/gi;
        
        reviewText?.addEventListener('input', () => {
            const value = reviewText.value;
            if (urlPattern.test(value)) {
                reviewText.value = value.replace(urlPattern, '');
                alert('URLs are not allowed in reviews.');
            }
        });
        
        // Form submission
        form?.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            if (!selectedRating) {
                alert('Please select a rating.');
                return;
            }
            
            const formData = new FormData(form);
            const reviewContent = formData.get('review') as string;
            
            // Final URL check
            if (urlPattern.test(reviewContent)) {
                alert('URLs are not allowed in reviews.');
                return;
            }
            
            // Store in localStorage - reviews display immediately
            const reviews = JSON.parse(localStorage.getItem('tms-reviews') || '[]');
            reviews.push({
                name: formData.get('name'),
                email: formData.get('email'),
                rating: selectedRating,
                treatmentType: formData.get('treatmentType'),
                review: reviewContent,
                entityType: formData.get('entityType'),
                entitySlug: formData.get('entitySlug'),
                entityName: formData.get('entityName'),
                date: new Date().toISOString()
            });
            localStorage.setItem('tms-reviews', JSON.stringify(reviews));
            
            // Dispatch event to update reviews list immediately
            window.dispatchEvent(new CustomEvent('review-submitted'));
            
            // Show success
            form.classList.add('hidden');
            successMsg?.classList.remove('hidden');
        });
    });
</script>
