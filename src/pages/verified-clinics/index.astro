                                </button>
                                <div
                                    id="section-insurance"
                                    class="hidden px-4 pb-4 space-y-4"
                                >
                                    {
                                        Object.entries(
                                            INSURANCE_CATEGORIES,
                                        ).map(([key, category]) => (
                                            <div>
                                                <p class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">
                                                    {category.label}
                                                </p>
                                                <div class="space-y-1.5">
                                                    {category.options
                                                        .slice(0, 5)
                                                        .map((opt) => (
                                                            <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 p-1.5 rounded-lg">
                                                                <input
                                                                    type="checkbox"
                                                                    class="filter-checkbox rounded border-gray-300 text-indigo-600 focus:ring-indigo-500"
                                                                    data-filter="insurance"
                                                                    data-value={
                                                                        opt.value
                                                                    }
                                                                />
                                                                <span class="text-sm text-gray-700">
                                                                    {opt.label}
                                                                </span>
                                                            </label>
                                                        ))}
                                                </div>
                                            </div>
                                        ))
                                    }
                                </div>
                            </div>

                            <!-- TMS Devices Section -->
                            <div class="border-b border-gray-100">
                                <button
                                    class="filter-toggle w-full p-4 flex items-center justify-between text-left"
                                    data-section="devices"
                                >
                                    <span class="font-bold text-gray-900"
                                        >TMS Devices</span
                                    >
                                    <svg
                                        class="w-5 h-5 text-gray-400 transition-transform"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
