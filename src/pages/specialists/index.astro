---
import Layout from "../../layouts/Layout.astro";

const title = "Find TMS Specialists by Type | TMS List";
const description =
    "Search for specific TMS provider types including Psychiatrists, Neurologists, and dedicated TMS Centers.";

const specialistTypes = [
    {
        title: "Psychiatrists (MD/DO)",
        description:
            "Medical doctors specializing in mental health who prescribe and manage TMS therapy.",
        icon: "üë®‚Äç‚öïÔ∏è",
        slug: "psychiatrist",
    },
    {
        title: "TMS Centers",
        description:
            "Specialized clinics dedicated primarily to Transcranial Magnetic Stimulation.",
        icon: "üè•",
        slug: "tms-center",
    },
    {
        title: "Neurologists",
        description:
            "Brain specialists who use TMS for neurological conditions and depression.",
        icon: "üß†",
        slug: "neurologist",
    },
    {
        title: "Hospital Programs",
        description:
            "Academic and medical center based programs, often for complex cases.",
        icon: "fz-hospital-alt", // Using emoji as fallback or icon class if available
        slug: "hospital",
    },
];
---

<Layout title={title} description={description}>
    <section class="bg-indigo-900 py-20 text-center text-white">
        <div class="container mx-auto px-4">
            <h1 class="text-4xl md:text-5xl font-black mb-6">
                Find a Specialist
            </h1>
            <p class="text-xl text-indigo-100 max-w-2xl mx-auto">
                Choose the type of provider that best fits your needs, from
                private psychiatrists to large academic medical centers.
            </p>
        </div>
    </section>

    <section class="py-16 container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
            {
                specialistTypes.map((type) => (
                    <a
                        href={`/us/?type=${type.slug}`}
                        class="group bg-white p-8 rounded-2xl shadow-lg border border-gray-100 hover:border-indigo-500 hover:shadow-2xl transition-all flex items-start gap-6"
                    >
                        <div class="text-4xl group-hover:scale-110 transition-transform duration-300 bg-indigo-50 w-20 h-20 flex items-center justify-center rounded-2xl group-hover:bg-indigo-600 group-hover:text-white">
                            {type.icon === "fz-hospital-alt" ? "üè•" : type.icon}
                        </div>
                        <div>
                            <h3 class="text-2xl font-bold text-gray-900 mb-2 group-hover:text-indigo-600 transition-colors">
                                {type.title}
                            </h3>
                            <p class="text-gray-600 leading-relaxed">
                                {type.description}
                            </p>
                            <span class="inline-block mt-4 text-sm font-bold text-indigo-600 uppercase tracking-wide group-hover:underline">
                                Browse Providers &rarr;
                            </span>
                        </div>
                    </a>
                ))
            }
        </div>
    </section>
</Layout>
