---
import Layout from "../../layouts/Layout.astro";
import {
    ClinicMachine,
    ClinicTreatment,
    ClinicInsurance,
} from "../../types/clinic";

const US_STATES = [
    { code: "AL", name: "Alabama" },
    { code: "AK", name: "Alaska" },
    { code: "AZ", name: "Arizona" },
    { code: "AR", name: "Arkansas" },
    { code: "CA", name: "California" },
    { code: "CO", name: "Colorado" },
    { code: "CT", name: "Connecticut" },
    { code: "DE", name: "Delaware" },
    { code: "DC", name: "Washington DC" },
    { code: "FL", name: "Florida" },
    { code: "GA", name: "Georgia" },
    { code: "HI", name: "Hawaii" },
    { code: "ID", name: "Idaho" },
    { code: "IL", name: "Illinois" },
    { code: "IN", name: "Indiana" },
    { code: "IA", name: "Iowa" },
    { code: "KS", name: "Kansas" },
    { code: "KY", name: "Kentucky" },
    { code: "LA", name: "Louisiana" },
    { code: "ME", name: "Maine" },
    { code: "MD", name: "Maryland" },
    { code: "MA", name: "Massachusetts" },
    { code: "MI", name: "Michigan" },
    { code: "MN", name: "Minnesota" },
    { code: "MS", name: "Mississippi" },
    { code: "MO", name: "Missouri" },
    { code: "MT", name: "Montana" },
    { code: "NE", name: "Nebraska" },
    { code: "NV", name: "Nevada" },
    { code: "NH", name: "New Hampshire" },
    { code: "NJ", name: "New Jersey" },
    { code: "NM", name: "New Mexico" },
    { code: "NY", name: "New York" },
    { code: "NC", name: "North Carolina" },
    { code: "ND", name: "North Dakota" },
    { code: "OH", name: "Ohio" },
    { code: "OK", name: "Oklahoma" },
    { code: "OR", name: "Oregon" },
    { code: "PA", name: "Pennsylvania" },
    { code: "RI", name: "Rhode Island" },
    { code: "SC", name: "South Carolina" },
    { code: "SD", name: "South Dakota" },
    { code: "TN", name: "Tennessee" },
    { code: "TX", name: "Texas" },
    { code: "UT", name: "Utah" },
    { code: "VT", name: "Vermont" },
    { code: "VA", name: "Virginia" },
    { code: "WA", name: "Washington" },
    { code: "WV", name: "West Virginia" },
    { code: "WI", name: "Wisconsin" },
    { code: "WY", name: "Wyoming" },
];

const machines = Object.values(ClinicMachine);
const treatments = Object.values(ClinicTreatment);
const insurances = Object.values(ClinicInsurance);

const title = "Add Your TMS Clinic | Free Listing on TMS List";
const description =
    "List your TMS therapy clinic for free. Get discovered by thousands of patients searching for treatment. Your listing goes live immediately.";
---

<Layout title={title} description={description}>
    <main
        class="min-h-screen bg-gradient-to-b from-slate-900 via-indigo-900 to-slate-900 py-16"
    >
        <div class="container mx-auto px-6 max-w-4xl">
            <!-- Header -->
            <div class="text-center mb-12">
                <span
                    class="inline-flex items-center gap-2 px-4 py-1.5 bg-emerald-500/20 text-emerald-400 rounded-full text-sm font-bold uppercase tracking-wider mb-4"
                >
                    <span
                        class="w-2 h-2 rounded-full bg-emerald-400 animate-pulse"
                    ></span>
                    Instant Listing
                </span>
                <h1 class="text-4xl md:text-5xl font-black text-white mb-4">
                    Add Your TMS Clinic
                </h1>
                <p class="text-xl text-slate-300 max-w-2xl mx-auto">
                    Get discovered by thousands of patients searching for TMS
                    therapy. <strong class="text-white"
                        >Your listing goes live immediately</strong
                    > after submission.
                </p>
            </div>

            <!-- Form Container -->
            <div
                class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-3xl p-8 md:p-12"
            >
                <!-- Netlify Forms - also works as standard form -->
                <form
                    id="add-listing-form"
                    class="space-y-10"
                    name="clinic-submission"
                    method="POST"
                    data-netlify="true"
                    netlify-honeypot="bot-field"
                >
                    <!-- Honeypot for spam protection -->
                    <input
                        type="hidden"
                        name="form-name"
                        value="clinic-submission"
                    />
                    <p class="hidden">
                        <label
                            >Don't fill this out: <input
                                name="bot-field"
                            /></label
                        >
                    </p>

                    <!-- Listing Type Selector -->
                    <section id="listing-type-section">
                        <div class="flex items-center gap-4 mb-6">
                            <div
                                class="w-10 h-10 rounded-full bg-gradient-to-r from-indigo-500 to-cyan-500 text-white flex items-center justify-center font-bold text-lg"
                            >
                                ‚òÖ
                            </div>
                            <h2 class="text-2xl font-bold text-white">
                                What would you like to list?
                            </h2>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <label
                                class="listing-type-option cursor-pointer group"
                            >
                                <input
                                    type="radio"
                                    name="listing_type"
                                    value="clinic"
                                    class="hidden"
                                    checked
                                />
                                <div
                                    class="p-6 rounded-xl border-2 border-white/20 bg-white/5 hover:border-indigo-500 hover:bg-indigo-500/10 transition-all text-center selected-type"
                                >
                                    <div class="text-4xl mb-3">üè•</div>
                                    <h3
                                        class="text-lg font-bold text-white mb-1"
                                    >
                                        TMS Clinic
                                    </h3>
                                    <p class="text-sm text-slate-400">
                                        List your clinic or treatment center
                                    </p>
                                </div>
                            </label>
                            <label
                                class="listing-type-option cursor-pointer group"
                            >
                                <input
                                    type="radio"
                                    name="listing_type"
                                    value="doctor"
                                    class="hidden"
                                />
                                <div
                                    class="p-6 rounded-xl border-2 border-white/20 bg-white/5 hover:border-cyan-500 hover:bg-cyan-500/10 transition-all text-center"
                                >
                                    <div class="text-4xl mb-3">üë®‚Äç‚öïÔ∏è</div>
                                    <h3
                                        class="text-lg font-bold text-white mb-1"
                                    >
                                        Doctor Profile
                                    </h3>
                                    <p class="text-sm text-slate-400">
                                        List yourself as a TMS provider
                                    </p>
                                </div>
                            </label>
                            <label
                                class="listing-type-option cursor-pointer group"
                            >
                                <input
                                    type="radio"
                                    name="listing_type"
                                    value="both"
                                    class="hidden"
                                />
                                <div
                                    class="p-6 rounded-xl border-2 border-white/20 bg-white/5 hover:border-emerald-500 hover:bg-emerald-500/10 transition-all text-center"
                                >
                                    <div class="text-4xl mb-3">‚ú®</div>
                                    <h3
                                        class="text-lg font-bold text-white mb-1"
                                    >
                                        Clinic + Doctor
                                    </h3>
                                    <p class="text-sm text-slate-400">
                                        List both your clinic and profile
                                    </p>
                                </div>
                            </label>
                        </div>
                    </section>

                    <!-- Step 1: Basic Info -->
                    <section>
                        <div class="flex items-center gap-4 mb-6">
                            <div
                                class="w-10 h-10 rounded-full bg-indigo-500 text-white flex items-center justify-center font-bold text-lg"
                            >
                                1
                            </div>
                            <h2 class="text-2xl font-bold text-white">
                                Clinic Information
                            </h2>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="md:col-span-2">
                                <label
                                    for="name"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >Clinic Name *</label
                                >
                                <input
                                    type="text"
                                    id="name"
                                    name="name"
                                    required
                                    class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                                    placeholder="e.g., Advanced TMS Wellness Center"
                                />
                            </div>

                            <div class="md:col-span-2">
                                <label
                                    for="address"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >Street Address *</label
                                >
                                <input
                                    type="text"
                                    id="address"
                                    name="address"
                                    required
                                    class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500"
                                    placeholder="e.g., 123 Medical Center Drive, Suite 200"
                                />
                            </div>

                            <div>
                                <label
                                    for="city"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >City *</label
                                >
                                <input
                                    type="text"
                                    id="city"
                                    name="city"
                                    required
                                    class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500"
                                    placeholder="e.g., Los Angeles"
                                />
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label
                                        for="state"
                                        class="block text-sm font-bold text-slate-300 mb-2"
                                        >State *</label
                                    >
                                    <select
                                        id="state"
                                        name="state"
                                        required
                                        class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white focus:ring-2 focus:ring-indigo-500"
                                    >
                                        <option value="">Select State</option>
                                        {
                                            US_STATES.map((s) => (
                                                <option value={s.code}>
                                                    {s.name}
                                                </option>
                                            ))
                                        }
                                    </select>
                                </div>
                                <div>
                                    <label
                                        for="zip"
                                        class="block text-sm font-bold text-slate-300 mb-2"
                                        >ZIP *</label
                                    >
                                    <input
                                        type="text"
                                        id="zip"
                                        name="zip"
                                        required
                                        pattern="[0-9]{5}"
                                        class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500"
                                        placeholder="90210"
                                    />
                                </div>
                            </div>

                            <div>
                                <label
                                    for="phone"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >Phone Number *</label
                                >
                                <input
                                    type="tel"
                                    id="phone"
                                    name="phone"
                                    required
                                    class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500"
                                    placeholder="(555) 123-4567"
                                />
                            </div>

                            <div>
                                <label
                                    for="website"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >Website URL</label
                                >
                                <input
                                    type="url"
                                    id="website"
                                    name="website"
                                    class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500"
                                    placeholder="https://www.yourclinic.com"
                                />
                            </div>

                            <div class="md:col-span-2">
                                <label
                                    for="description"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >Clinic Description</label
                                >
                                <textarea
                                    id="description"
                                    name="description"
                                    rows="4"
                                    class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500"
                                    placeholder="Tell patients about your clinic, your approach to TMS therapy, and what makes you unique..."
                                ></textarea>
                            </div>
                        </div>
                    </section>

                    <!-- Step 2: TMS Details -->
                    <section>
                        <div class="flex items-center gap-4 mb-6">
                            <div
                                class="w-10 h-10 rounded-full bg-cyan-500 text-white flex items-center justify-center font-bold text-lg"
                            >
                                2
                            </div>
                            <h2 class="text-2xl font-bold text-white">
                                TMS Details
                            </h2>
                        </div>

                        <div class="space-y-6">
                            <div>
                                <label
                                    class="block text-sm font-bold text-slate-300 mb-3"
                                    >TMS Machines Used *</label
                                >
                                <div
                                    class="grid grid-cols-2 md:grid-cols-4 gap-3"
                                >
                                    {
                                        machines.map((m) => (
                                            <label class="flex items-center gap-3 p-3 rounded-xl bg-white/5 border border-white/10 cursor-pointer hover:bg-white/10 transition-colors">
                                                <input
                                                    type="checkbox"
                                                    name="machines"
                                                    value={m}
                                                    class="w-5 h-5 rounded border-white/30 text-indigo-500 focus:ring-indigo-500 bg-white/10"
                                                />
                                                <span class="text-white text-sm font-medium">
                                                    {m}
                                                </span>
                                            </label>
                                        ))
                                    }
                                </div>
                            </div>

                            <div>
                                <label
                                    class="block text-sm font-bold text-slate-300 mb-3"
                                    >Conditions Treated *</label
                                >
                                <div
                                    class="grid grid-cols-2 md:grid-cols-3 gap-3"
                                >
                                    {
                                        treatments.map((t) => (
                                            <label class="flex items-center gap-3 p-3 rounded-xl bg-white/5 border border-white/10 cursor-pointer hover:bg-white/10 transition-colors">
                                                <input
                                                    type="checkbox"
                                                    name="treatments"
                                                    value={t}
                                                    class="w-5 h-5 rounded border-white/30 text-cyan-500 focus:ring-cyan-500 bg-white/10"
                                                />
                                                <span class="text-white text-sm font-medium">
                                                    {t}
                                                </span>
                                            </label>
                                        ))
                                    }
                                </div>
                            </div>

                            <div>
                                <label
                                    class="block text-sm font-bold text-slate-300 mb-3"
                                    >Insurance Accepted</label
                                >
                                <div
                                    class="grid grid-cols-2 md:grid-cols-4 gap-3"
                                >
                                    {
                                        insurances.map((i) => (
                                            <label class="flex items-center gap-3 p-3 rounded-xl bg-white/5 border border-white/10 cursor-pointer hover:bg-white/10 transition-colors">
                                                <input
                                                    type="checkbox"
                                                    name="insurances"
                                                    value={i}
                                                    class="w-5 h-5 rounded border-white/30 text-emerald-500 focus:ring-emerald-500 bg-white/10"
                                                />
                                                <span class="text-white text-sm font-medium">
                                                    {i}
                                                </span>
                                            </label>
                                        ))
                                    }
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Step 3: Media & Embeds -->
                    <section>
                        <div class="flex items-center gap-4 mb-6">
                            <div
                                class="w-10 h-10 rounded-full bg-purple-500 text-white flex items-center justify-center font-bold text-lg"
                            >
                                3
                            </div>
                            <h2 class="text-2xl font-bold text-white">
                                Media & Links
                            </h2>
                        </div>

                        <div
                            class="bg-amber-500/10 border border-amber-500/30 rounded-xl p-4 mb-6"
                        >
                            <p class="text-amber-300 text-sm">
                                <strong>Note:</strong> All media must be hosted externally.
                                Provide URLs to images/videos hosted on your website,
                                Google Drive, YouTube, or image hosting services.
                            </p>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label
                                    for="logo_url"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >Logo URL</label
                                >
                                <input
                                    type="url"
                                    id="logo_url"
                                    name="logo_url"
                                    class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500"
                                    placeholder="https://example.com/logo.png"
                                />
                            </div>

                            <div>
                                <label
                                    for="hero_image_url"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >Main Photo URL</label
                                >
                                <input
                                    type="url"
                                    id="hero_image_url"
                                    name="hero_image_url"
                                    class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500"
                                    placeholder="https://example.com/clinic-photo.jpg"
                                />
                            </div>

                            <div>
                                <label
                                    for="video_url"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >YouTube Video URL</label
                                >
                                <input
                                    type="url"
                                    id="video_url"
                                    name="video_url"
                                    class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500"
                                    placeholder="https://www.youtube.com/watch?v=..."
                                />
                            </div>

                            <div>
                                <label
                                    for="gbp_embed_url"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >Google Maps Embed URL</label
                                >
                                <input
                                    type="url"
                                    id="gbp_embed_url"
                                    name="gbp_embed_url"
                                    class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500"
                                    placeholder="https://www.google.com/maps/embed?pb=..."
                                />
                                <p class="text-xs text-slate-400 mt-2">
                                    Find this in Google Maps ‚Üí Share ‚Üí Embed a
                                    map ‚Üí Copy the URL from the iframe src
                                </p>
                            </div>
                        </div>
                    </section>

                    <!-- Step 4: Doctor Info (Optional) -->
                    <section>
                        <div class="flex items-center gap-4 mb-6">
                            <div
                                class="w-10 h-10 rounded-full bg-emerald-500 text-white flex items-center justify-center font-bold text-lg"
                            >
                                4
                            </div>
                            <h2 class="text-2xl font-bold text-white">
                                Lead Psychiatrist (Optional)
                            </h2>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label
                                    for="doctor_name"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >Doctor Name</label
                                >
                                <input
                                    type="text"
                                    id="doctor_name"
                                    name="doctor_name"
                                    class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500"
                                    placeholder="Dr. Jane Smith, MD"
                                />
                            </div>

                            <div>
                                <label
                                    for="doctor_title"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >Title/Role</label
                                >
                                <input
                                    type="text"
                                    id="doctor_title"
                                    name="doctor_title"
                                    class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500"
                                    placeholder="Medical Director"
                                />
                            </div>

                            <div>
                                <label
                                    for="doctor_image_url"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >Doctor Photo URL</label
                                >
                                <input
                                    type="url"
                                    id="doctor_image_url"
                                    name="doctor_image_url"
                                    class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500"
                                    placeholder="https://example.com/dr-smith.jpg"
                                />
                            </div>

                            <div>
                                <label
                                    for="doctor_years"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >Years of Experience</label
                                >
                                <input
                                    type="number"
                                    id="doctor_years"
                                    name="doctor_years"
                                    min="0"
                                    max="60"
                                    class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500"
                                    placeholder="15"
                                />
                            </div>

                            <div>
                                <label
                                    for="doctor_registration"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >Medical License / Registration Number</label
                                >
                                <input
                                    type="text"
                                    id="doctor_registration"
                                    name="doctor_registration"
                                    class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500"
                                    placeholder="e.g., MD12345"
                                />
                            </div>

                            <div>
                                <label
                                    for="doctor_email"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >Doctor Email (for lead notifications)</label
                                >
                                <input
                                    type="email"
                                    id="doctor_email"
                                    name="doctor_email"
                                    class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500"
                                    placeholder="dr.smith@example.com"
                                />
                                <p class="text-xs text-slate-400 mt-1">
                                    Use your name as login and this email as
                                    password to view leads
                                </p>
                            </div>

                            <div class="md:col-span-2">
                                <label
                                    for="doctor_specialties"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >Areas of Expertise</label
                                >
                                <input
                                    type="text"
                                    id="doctor_specialties"
                                    name="doctor_specialties"
                                    class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-slate-400 focus:ring-2 focus:ring-indigo-500"
                                    placeholder="e.g., Depression, OCD, PTSD (comma-separated)"
                                />
                            </div>
                        </div>
                    </section>

                    <!-- Step 5: Your Info (Attribution) -->
                    <section>
                        <div class="flex items-center gap-4 mb-6">
                            <div
                                class="w-10 h-10 rounded-full bg-rose-500 text-white flex items-center justify-center font-bold text-lg"
                            >
                                5
                            </div>
                            <h2 class="text-2xl font-bold text-white">
                                Your Information
                            </h2>
                        </div>

                        <div
                            class="bg-blue-500/10 border border-blue-500/30 rounded-xl p-4 mb-6"
                        >
                            <p class="text-blue-300 text-sm">
                                This information helps us contact you if we need
                                to verify details. Your email will not be
                                displayed publicly.
                            </p>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label
                                    for="submitter_name"
                                    class="block text-sm font-bold text-slate-300 mb-2"
                                    >Your Name *</label
