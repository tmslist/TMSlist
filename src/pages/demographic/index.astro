---
import Layout from '../../layouts/Layout.astro';
import { DEMOGRAPHIC_SLUGS } from '../../utils/seo_slugs';

const title = "TMS for Different Patient Groups | Seniors, Veterans, Teens & More";
const description = "Find TMS treatment information tailored to your specific needs. Guides for seniors, veterans, teens, pregnant women, and more.";
---

<Layout title={title} description={description}>
    <main class="bg-gray-50 min-h-screen">
        <!-- Hero -->
        <section class="bg-gradient-to-br from-amber-800 via-orange-900 to-slate-900 py-20">
            <div class="container mx-auto px-6">
                <nav class="flex text-sm text-orange-200 mb-8">
                    <a href="/" class="hover:text-white">Home</a>
                    <span class="mx-2">/</span>
                    <span class="text-white">Patient Groups</span>
                </nav>
                
                <h1 class="text-4xl md:text-6xl font-black text-white mb-6">
                    TMS for <span class="text-amber-400">Different Patients</span>
                </h1>
                <p class="text-xl text-orange-100 max-w-3xl">
                    TMS therapy can be tailored for various patient groups. Find information specific to your needs.
                </p>
            </div>
        </section>

        <!-- Grid -->
        <section class="py-16">
            <div class="container mx-auto px-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {DEMOGRAPHIC_SLUGS.map(item => (
                        <a href={`/demographic/${item.slug}/`} class="group bg-white rounded-2xl p-8 border border-gray-100 shadow-sm hover:shadow-xl hover:border-amber-200 transition-all">
                            <h3 class="text-xl font-bold text-gray-900 group-hover:text-amber-600 mb-3">{item.title}</h3>
                            <p class="text-gray-500 text-sm mb-4">Specialized TMS information</p>
                            <span class="text-amber-600 font-bold text-sm">Learn More â†’</span>
                        </a>
                    ))}
                </div>
            </div>
        </section>
    </main>
</Layout>
