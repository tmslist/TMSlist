---
import Layout from "../../layouts/Layout.astro";
import { COMPARE_SLUGS } from "../../utils/seo_slugs";

const title = "Compare TMS Treatments & Technologies | TMS List";
const description =
    "Compare TMS therapy with other treatments and compare different TMS devices. Make informed decisions about your mental health treatment.";

const treatmentComparisons = COMPARE_SLUGS.filter(
    (s) =>
        s.slug.includes("tms-vs-") &&
        !s.slug.includes("neurostar") &&
        !s.slug.includes("magventure"),
);

const deviceComparisons = COMPARE_SLUGS.filter(
    (s) =>
        s.slug.includes("neurostar") ||
        s.slug.includes("magventure") ||
        s.slug.includes("brainsway"),
);
---

<Layout title={title} description={description}>
    <main
        class="min-h-screen bg-gradient-to-b from-slate-900 via-indigo-900 to-slate-900 py-16"
    >
        <div class="container mx-auto px-6 max-w-6xl">
            <!-- Header -->
            <div class="text-center mb-16">
                <span
                    class="inline-block px-4 py-1.5 bg-cyan-500/20 text-cyan-400 rounded-full text-sm font-bold uppercase tracking-wider mb-4"
                >
                    Comparison Guides
                </span>
                <h1 class="text-4xl md:text-5xl font-black text-white mb-4">
                    Compare TMS Treatments
                </h1>
                <p class="text-xl text-slate-300 max-w-2xl mx-auto">
                    Make informed decisions with our detailed side-by-side
                    comparisons of TMS therapy vs other treatments and different
                    TMS technologies.
                </p>
            </div>

            <!-- Treatment Comparisons -->
            <section class="mb-16">
                <h2
                    class="text-2xl font-bold text-white mb-8 flex items-center gap-3"
                >
                    <span
                        class="w-10 h-10 rounded-full bg-indigo-500/20 text-indigo-400 flex items-center justify-center"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path>
                        </svg>
                    </span>
                    TMS vs Other Treatments
                </h2>
                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
                >
                    {
                        treatmentComparisons.map((comparison) => (
                            <a
                                href={`/compare/${comparison.slug}/`}
                                class="group bg-white/5 backdrop-blur border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-indigo-500/50 transition-all hover:-translate-y-1"
                            >
                                <div class="flex items-center justify-between mb-4">
                                    <span class="text-3xl">âš¡</span>
                                    <svg
                                        class="w-5 h-5 text-slate-400 group-hover:text-indigo-400 transition-colors"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 5l7 7-7 7"
                                        />
                                    </svg>
                                </div>
                                <h3 class="text-lg font-bold text-white mb-2">
                                    {comparison.title}
                                </h3>
                                <p class="text-sm text-slate-400">
                                    Compare effectiveness, side effects, cost,
                                    and treatment duration
                                </p>
                            </a>
                        ))
                    }
                </div>
            </section>

            <!-- Device Comparisons -->
            <section class="mb-16">
                <h2
                    class="text-2xl font-bold text-white mb-8 flex items-center gap-3"
                >
                    <span
                        class="w-10 h-10 rounded-full bg-cyan-500/20 text-cyan-400 flex items-center justify-center"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"
                            ></path>
                        </svg>
                    </span>
                    TMS Device Comparisons
                </h2>
                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
                >
                    {
                        deviceComparisons.map((comparison) => (
                            <a
                                href={`/compare/${comparison.slug}/`}
                                class="group bg-white/5 backdrop-blur border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-cyan-500/50 transition-all hover:-translate-y-1"
                            >
                                <div class="flex items-center justify-between mb-4">
                                    <span class="text-3xl">ðŸ”¬</span>
                                    <svg
                                        class="w-5 h-5 text-slate-400 group-hover:text-cyan-400 transition-colors"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 5l7 7-7 7"
                                        />
                                    </svg>
                                </div>
                                <h3 class="text-lg font-bold text-white mb-2">
                                    {comparison.title}
                                </h3>
                                <p class="text-sm text-slate-400">
                                    Compare technology, FDA approvals, treatment
                                    protocols, and availability
                                </p>
                            </a>
                        ))
                    }
                </div>
            </section>

            <!-- Compare Clinics CTA -->
            <section
                class="bg-gradient-to-r from-indigo-600/20 to-cyan-600/20 border border-indigo-500/30 rounded-3xl p-8 md:p-12 text-center"
            >
                <h2 class="text-3xl font-bold text-white mb-4">
                    Compare Specific Clinics
                </h2>
                <p class="text-lg text-slate-300 mb-8 max-w-2xl mx-auto">
                    Want to compare two or more TMS clinics in your area? Browse
                    our verified clinics and use the compare feature to see them
                    side-by-side.
                </p>
                <a
                    href="/verified-clinics/"
                    class="inline-flex items-center gap-2 px-8 py-4 bg-indigo-600 text-white font-bold rounded-xl hover:bg-indigo-700 transition-colors shadow-lg shadow-indigo-500/30"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                        ></path>
                    </svg>
                    Browse Verified Clinics
                </a>
            </section>
        </div>
    </main>
</Layout>
