---
import Layout from "../../layouts/Layout.astro";

const title = "List Your Clinic | TMS List Provider Network";
const description =
    "Join the #1 Directory for TMS Therapy. Grow your practice, improve SEO, and reach more patients seeking local TMS providers.";

const benefits = [
    {
        title: "High-Intent Patient Leads",
        description:
            "Connect with patients actively searching for TMS therapy in your area. Our visitors are qualified and ready to book.",
        icon: "ðŸ‘¥",
    },
    {
        title: "Verified Badge Authority",
        description:
            "Stand out as a trusted provider. Verified clinics get priority ranking, special badging, and higher conversion rates.",
        icon: "âœ“",
    },
    {
        title: "Boost Your SEO",
        description:
            "Get a high-quality backlink and structured data listing that improves your clinic's own website ranking in Google Search.",
        icon: "ðŸ“ˆ",
    },
    {
        title: "Detailed Analytics",
        description:
            "Track profile views, website clicks, and phone calls. Understand how patients are finding and interacting with your practice.",
        icon: "ðŸ“Š",
    },
];
---

<Layout title={title} description={description}>
    <!-- Hero Section -->
    <section class="relative bg-white py-20 overflow-hidden">
        <div
            class="absolute inset-0 bg-gradient-to-br from-indigo-50 to-white z-0"
        >
        </div>
        <div class="container mx-auto px-4 relative z-10">
            <div class="max-w-4xl mx-auto text-center">
                <span
                    class="inline-block px-4 py-1.5 bg-indigo-100 text-indigo-700 rounded-full text-sm font-bold uppercase tracking-wider mb-6"
                    >For Practice Owners</span
                >
                <h1
                    class="text-5xl md:text-6xl font-black text-gray-900 mb-6 tracking-tight"
                >
                    Grow Your TMS Practice with <span class="text-indigo-600"
                        >Verified Leads</span
                    >
                </h1>
                <p class="text-xl text-gray-600 mb-10 max-w-2xl mx-auto">
                    Join the nation's largest dedicated directory for
                    Transcranial Magnetic Stimulation. Get your clinic in front
                    of thousands of patients searching every month.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a
                        href="/add-listing/"
                        class="inline-flex items-center justify-center px-8 py-4 bg-indigo-600 text-white font-bold rounded-xl hover:bg-indigo-700 transition-all shadow-lg shadow-indigo-200 transform hover:-translate-y-1"
                    >
                        Claim Your Free Listing
                        <svg
                            class="w-5 h-5 ml-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
                        >
                    </a>
                    <a
                        href="#benefits"
                        class="inline-flex items-center justify-center px-8 py-4 bg-white text-gray-700 font-bold rounded-xl border border-gray-200 hover:bg-gray-50 transition-all"
                    >
                        Learn More
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Benefits Grid -->
    <section id="benefits" class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-black text-gray-900 mb-4">
                    Why Top Clinics Join TMS List
                </h2>
                <p class="text-lg text-gray-600">
                    More than just a directory listing â€“ it's a powerful growth
                    engine.
                </p>
            </div>

            <div
                class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto"
            >
                {
                    benefits.map((benefit) => (
                        <div class="p-8 rounded-2xl bg-gray-50 border border-gray-100 hover:shadow-xl hover:bg-white hover:border-indigo-100 transition-all group">
                            <div class="w-14 h-14 rounded-xl bg-indigo-100 text-2xl flex items-center justify-center mb-6 group-hover:bg-indigo-600 group-hover:text-white transition-colors">
                                {benefit.icon}
                            </div>
                            <h3 class="text-xl font-bold text-gray-900 mb-3">
                                {benefit.title}
                            </h3>
                            <p class="text-gray-600 leading-relaxed">
                                {benefit.description}
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Trust Section -->
    <section class="py-20 bg-gray-900 text-white">
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-3xl font-black mb-12">
                Trusted by Leading Providers Nationwide
            </h2>
            <div
                class="grid grid-cols-2 md:grid-cols-4 gap-8 opacity-60 grayscale hover:grayscale-0 transition-all duration-500"
            >
                <!-- Placeholder logos for authority -->
                <div
                    class="flex items-center justify-center text-xl font-bold border-2 border-white/20 rounded-xl p-4"
                >
                    NeuroStar
                </div>
                <div
                    class="flex items-center justify-center text-xl font-bold border-2 border-white/20 rounded-xl p-4"
                >
                    BrainsWay
                </div>
                <div
                    class="flex items-center justify-center text-xl font-bold border-2 border-white/20 rounded-xl p-4"
                >
                    MagVenture
                </div>
                <div
                    class="flex items-center justify-center text-xl font-bold border-2 border-white/20 rounded-xl p-4"
                >
                    Greenbrook
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Footer -->
    <section class="py-24 bg-gradient-to-br from-indigo-600 to-blue-700">
        <div class="container mx-auto px-4 text-center text-white">
            <h2 class="text-4xl font-black mb-6">
                Ready to Grow Your Practice?
            </h2>
            <p class="text-xl text-indigo-100 mb-10 max-w-2xl mx-auto">
                Listing requires less than 5 minutes. Get verified today and
                start receiving patient inquiries.
            </p>
            <a
                href="/add-listing/"
                class="inline-flex items-center justify-center px-10 py-5 bg-white text-indigo-600 font-bold text-lg rounded-xl shadow-xl hover:bg-gray-50 transform hover:-translate-y-1 transition-all"
            >
                List Your Clinic Now
            </a>
        </div>
    </section>
</Layout>
