---
import Layout from '../../layouts/Layout.astro';
import { TECHNOLOGY_SLUGS, PROTOCOL_SLUGS } from '../../utils/seo_slugs';

const title = "TMS Technology & Machines | NeuroStar, BrainsWay, Apollo, Exomind";
const description = "Compare FDA-cleared TMS devices including NeuroStar, BrainsWay Deep TMS, MagVenture, Apollo TMS, Exomind, and more. Learn about different protocols.";

// Additional machines to add
const additionalMachines = [
    { slug: 'apollo-tms', title: 'Apollo TMS' },
    { slug: 'exomind', title: 'Exomind Wellness TMS' },
    { slug: 'nexstim', title: 'Nexstim TMS' },
    { slug: 'mag-and-more', title: 'MAG & More' },
    { slug: 'deymed', title: 'Deymed TMS' },
];

const allTech = [...TECHNOLOGY_SLUGS, ...additionalMachines];
---

<Layout title={title} description={description}>
    <main class="bg-gray-50 min-h-screen">
        <!-- Hero -->
        <section class="bg-gradient-to-br from-purple-900 via-indigo-900 to-slate-900 py-20">
            <div class="container mx-auto px-6">
                <nav class="flex text-sm text-purple-200 mb-8">
                    <a href="/" class="hover:text-white">Home</a>
                    <span class="mx-2">/</span>
                    <span class="text-white">Technology</span>
                </nav>
                
                <h1 class="text-4xl md:text-6xl font-black text-white mb-6">
                    TMS <span class="text-purple-400">Technology</span> & Devices
                </h1>
                <p class="text-xl text-purple-100 max-w-3xl">
                    Compare FDA-cleared TMS devices. Learn about the differences between NeuroStar, BrainsWay Deep TMS, Apollo, Exomind, and other leading systems.
                </p>
            </div>
        </section>

        <!-- Machines Grid -->
        <section class="py-16">
            <div class="container mx-auto px-6">
                <h2 class="text-3xl font-bold text-gray-900 mb-10">TMS Devices</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
                    {allTech.map(item => (
                        <a href={`/technology/${item.slug}/`} class="group bg-white rounded-2xl p-8 border border-gray-100 shadow-sm hover:shadow-xl hover:border-purple-200 transition-all">
                            <div class="w-12 h-12 rounded-xl bg-purple-100 text-purple-600 flex items-center justify-center mb-4">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path></svg>
                            </div>
                            <h3 class="text-xl font-bold text-gray-900 group-hover:text-purple-600 mb-3">{item.title}</h3>
                            <p class="text-gray-500 text-sm mb-4">FDA-cleared TMS system</p>
                            <span class="text-purple-600 font-bold text-sm">Learn More →</span>
                        </a>
                    ))}
                </div>

                <!-- Protocols -->
                <h2 class="text-3xl font-bold text-gray-900 mb-10">Treatment Protocols</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {PROTOCOL_SLUGS.map(item => (
                        <a href={`/protocols/${item.slug}/`} class="group bg-white rounded-2xl p-8 border border-gray-100 shadow-sm hover:shadow-xl hover:border-blue-200 transition-all">
                            <h3 class="text-xl font-bold text-gray-900 group-hover:text-blue-600 mb-3">{item.title}</h3>
                            <p class="text-gray-500 text-sm mb-4">Advanced TMS protocol</p>
                            <span class="text-blue-600 font-bold text-sm">Read Guide →</span>
                        </a>
                    ))}
                </div>
            </div>
        </section>
    </main>
</Layout>
