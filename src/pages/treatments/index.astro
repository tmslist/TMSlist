---
import Layout from '../../layouts/Layout.astro';
import { TREATMENT_SLUGS } from '../../utils/seo_slugs';

const title = "TMS Treatment Conditions | Depression, Anxiety, OCD & More";
const description = "Explore FDA-cleared TMS therapy conditions including depression, anxiety, OCD, PTSD, and more. Learn about treatment protocols and success rates.";
---

<Layout title={title} description={description}>
    <main class="bg-gray-50 min-h-screen">
        <!-- Hero -->
        <section class="bg-gradient-to-br from-indigo-900 via-blue-900 to-slate-900 py-20">
            <div class="container mx-auto px-6">
                <nav class="flex text-sm text-blue-200 mb-8">
                    <a href="/" class="hover:text-white">Home</a>
                    <span class="mx-2">/</span>
                    <span class="text-white">Conditions Treated</span>
                </nav>
                
                <h1 class="text-4xl md:text-6xl font-black text-white mb-6">
                    Conditions <span class="text-cyan-400">Treated</span> with TMS
                </h1>
                <p class="text-xl text-blue-100 max-w-3xl">
                    TMS therapy is FDA-cleared for multiple mental health conditions. Explore our comprehensive guides for each condition.
                </p>
            </div>
        </section>

        <!-- Grid -->
        <section class="py-16">
            <div class="container mx-auto px-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {TREATMENT_SLUGS.map(item => (
                        <a href={`/treatments/${item.slug}/`} class="group bg-white rounded-2xl p-8 border border-gray-100 shadow-sm hover:shadow-xl hover:border-indigo-200 transition-all">
                            <h3 class="text-xl font-bold text-gray-900 group-hover:text-indigo-600 mb-3">{item.title}</h3>
                            <p class="text-gray-500 text-sm mb-4">Learn about TMS therapy for {item.title.replace('TMS for ', '').toLowerCase()}</p>
                            <span class="text-indigo-600 font-bold text-sm">Read Guide â†’</span>
                        </a>
                    ))}
                </div>
            </div>
        </section>
    </main>
</Layout>
