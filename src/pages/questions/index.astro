---
import Layout from "../../layouts/Layout.astro";
import questionsData from "../../data/questions-comprehensive.json";

const title = "TMS Therapy Questions & Expert Answers | TMS List";
const description =
    "Find expert answers to all your TMS therapy questions. Browse 100+ topics covering cost, effectiveness, side effects, insurance coverage, and more.";

// Group questions by category
const categories = {
    basics: {
        name: "TMS Basics",
        icon: "ðŸ“š",
        description: "Understanding TMS therapy fundamentals",
    },
    cost: {
        name: "Cost & Insurance",
        icon: "ðŸ’°",
        description: "Pricing, coverage, and payment options",
    },
    conditions: {
        name: "Conditions Treated",
        icon: "ðŸ§ ",
        description: "Effectiveness for different mental health conditions",
    },
    comparisons: {
        name: "Treatment Comparisons",
        icon: "âš–ï¸",
        description: "How TMS compares to other therapies",
    },
};

const groupedQuestions = questionsData.reduce((acc, q) => {
    if (!acc[q.category]) acc[q.category] = [];
    acc[q.category].push(q);
    return acc;
}, {});

// Featured/trending questions
const featured = questionsData.slice(0, 6);
---

<Layout title={title} description={description}>
    <main class="min-h-screen">
        <!-- Hero Section -->
        <section
            class="bg-gradient-to-br from-indigo-900 via-purple-900 to-blue-900 py-20 text-center text-white relative overflow-hidden"
        >
            <div class="absolute inset-0 opacity-20">
                <div
                    class="absolute top-0 right-1/4 w-96 h-96 bg-indigo-500 rounded-full blur-[120px]"
                >
                </div>
                <div
                    class="absolute bottom-0 left-1/4 w-72 h-72 bg-cyan-500 rounded-full blur-[100px]"
                >
                </div>
            </div>

            <div class="container mx-auto px-4 relative z-10">
                <h1 class="text-5xl md:text-6xl font-black mb-6">
                    TMS Therapy <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-400"
                        >Questions & Answers</span
                    >
                </h1>
                <p class="text-xl text-indigo-100 max-w-3xl mx-auto mb-8">
                    Expert answers to your TMS therapy questions. Evidence-based
                    information you can trust.
                </p>

                {/* Search Bar with Autocomplete */}
                <div class="max-w-2xl mx-auto">
                    <div class="relative" id="search-container">
                        <input
                            type="text"
                            id="question-search"
                            placeholder="Ask any question about TMS therapy..."
                            class="w-full px-6 py-4 rounded-2xl text-gray-900 text-lg pr-12 shadow-xl focus:outline-none focus:ring-4 focus:ring-cyan-400"
                            autocomplete="off"
                        />
                        <svg
                            class="absolute right-4 top-1/2 -translate-y-1/2 w-6 h-6 text-gray-400 pointer-events-none"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                            ></path>
                        </svg>

                        {/* Autocomplete Dropdown */}
                        <div
                            id="autocomplete-results"
                            class="absolute top-full left-0 right-0 mt-2 bg-white rounded-xl shadow-2xl border border-gray-200 max-h-96 overflow-y-auto hidden z-50"
                        >
                            {/* Results populated by JS */}
                        </div>
                    </div>
                    <p class="text-indigo-200 text-sm mt-3 text-center">
                        ðŸ’¡ Try: "How much does TMS cost?" or "Is TMS FDA
                        approved?"
                    </p>
                </div>
            </div>
        </section>

        <div class="container mx-auto px-4 py-12">
            <!-- Featured Questions -->
            <section class="mb-16">
                <h2 class="text-3xl font-bold text-gray-900 mb-8">
                    Most Asked Questions
                </h2>
                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
                >
                    {
                        featured.map((q) => (
                            <a
                                href={`/questions/${q.slug}/`}
                                class="group block p-6 bg-white rounded-xl border border-gray-200 hover:border-indigo-500 hover:shadow-xl transition-all"
                            >
                                <h3 class="font-bold text-lg text-gray-900 group-hover:text-indigo-600 transition-colors mb-3">
                                    {q.question}
                                </h3>
                                <p class="text-gray-600 text-sm line-clamp-3 mb-4">
                                    {q.quickAnswer}
                                </p>
                                <span class="text-indigo-600 text-sm font-semibold group-hover:underline">
                                    Read Answer â†’
                                </span>
                            </a>
                        ))
                    }
                </div>
            </section>

            <!-- Browse by Category -->
            <section>
                <h2 class="text-3xl font-bold text-gray-900 mb-8">
                    Browse by Topic
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {
                        Object.entries(categories).map(([key, cat]) => {
                            const questions = groupedQuestions[key] || [];
                            return (
                                <div class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-8 border border-gray-200 hover:shadow-lg transition-shadow">
                                    <div class="flex items-center gap-4 mb-4">
                                        <span class="text-4xl">{cat.icon}</span>
                                        <div>
                                            <h3 class="text-2xl font-bold text-gray-900">
                                                {cat.name}
                                            </h3>
                                            <p class="text-gray-600 text-sm">
                                                {cat.description}
                                            </p>
                                        </div>
                                    </div>
                                    <div class="space-y-2 mt-6">
                                        {questions.slice(0, 5).map((q) => (
                                            <a
                                                href={`/questions/${q.slug}/`}
                                                class="block py-2 px-3 rounded-lg hover:bg-indigo-50 text-gray-700 hover:text-indigo-700 transition-colors"
                                            >
                                                â€¢ {q.question}
                                            </a>
                                        ))}
                                        {questions.length > 5 && (
                                            <a
                                                href={`/questions/category/${key}/`}
                                                class="block py-2 px-3 text-indigo-600 font-semibold hover:underline"
                                            >
                                                View all {questions.length}{" "}
                                                questions â†’
                                            </a>
                                        )}
                                    </div>
                                </div>
                            );
                        })
                    }
                </div>
            </section>

            <!-- CTA -->
            <section
                class="mt-16 bg-indigo-600 rounded-2xl p-12 text-center text-white"
            >
                <h2 class="text-3xl font-bold mb-4">Can't find your answer?</h2>
                <p class="text-indigo-100 mb-6 max-w-2xl mx-auto">
                    Talk to a TMS specialist for free. Our network of verified
                    providers can answer your specific questions.
                </p>
                <button
                    onclick="document.dispatchEvent(new Event('open-enquiry-modal'))"
                    class="px-8 py-4 bg-white text-indigo-600 font-bold rounded-xl hover:bg-indigo-50 transition-colors shadow-lg"
                >
                    Talk to a Specialist
                </button>
            </section>
        </div>
    </main>

    <script>
        import Fuse from "fuse.js";
        import questionsData from "../../data/questions-comprehensive.json";

        // Initialize Fuse.js for fuzzy search
        const fuse = new Fuse(questionsData, {
            keys: ["question", "quickAnswer", "keywords"],
            threshold: 0.3,
            minMatchCharLength: 2,
            includeScore: true,
            includeMatches: true,
        });

        const searchInput = document.getElementById(
            "question-search",
        ) as HTMLInputElement;
        const resultsContainer = document.getElementById(
            "autocomplete-results",
        );
        let selectedIndex = -1;
        let currentResults: any[] = [];

        // Debounce function
        function debounce(func: Function, wait: number) {
            let timeout: NodeJS.Timeout;
            return function executedFunction(...args: any[]) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        // Highlight matching text
        function highlightMatch(text: string, query: string): string {
            if (!query) return text;
            const regex = new RegExp(`(${query})`, "gi");
            return text.replace(
                regex,
                '<mark class="bg-yellow-200 text-gray-900 font-semibold">$1</mark>',
            );
        }

        // Display search results
        function displayResults(results: any[]) {
            if (!resultsContainer) return;

            if (results.length === 0) {
                resultsContainer.classList.add("hidden");
                currentResults = [];
                return;
            }

            currentResults = results;
            selectedIndex = -1;

            const html = results
                .slice(0, 7)
                .map((result, index) => {
                    const item = result.item;
                    const categoryBadgeColors: Record<string, string> = {
                        basics: "bg-blue-100 text-blue-700",
                        cost: "bg-green-100 text-green-700",
                        conditions: "bg-purple-100 text-purple-700",
                        comparisons: "bg-orange-100 text-orange-700",
                        location: "bg-cyan-100 text-cyan-700",
                        safety: "bg-red-100 text-red-700",
                        timeline: "bg-indigo-100 text-indigo-700",
                        experience: "bg-pink-100 text-pink-700",
                        technology: "bg-gray-100 text-gray-700",
                        procedure: "bg-yellow-100 text-yellow-700",
                    };

                    const badgeColor =
                        categoryBadgeColors[item.category] ||
                        "bg-gray-100 text-gray-700";

                    return `
                    <a 
                        href="/questions/${item.slug}/" 
                        class="autocomplete-item block px-6 py-4 hover:bg-indigo-50 border-b border-gray-100 last:border-b-0 transition-colors"
                        data-index="${index}"
                    >
                        <div class="flex items-start justify-between gap-4">
                            <div class="flex-1">
                                <div class="font-semibold text-gray-900 mb-1">
                                    ${highlightMatch(item.question, searchInput?.value || "")}
                                </div>
                                <div class="text-sm text-gray-600 line-clamp-2">
                                    ${item.quickAnswer.slice(0, 120)}...
                                </div>
                            </div>
                            <span class="flex-shrink-0 px-2 py-1 rounded-full text-xs font-semibold ${badgeColor}">
                                ${item.category}
                            </span>
                        </div>
                    </a>
                `;
                })
                .join("");

            resultsContainer.innerHTML = html;
            resultsContainer.classList.remove("hidden");

            // Add click handlers
            document.querySelectorAll(".autocomplete-item").forEach((item) => {
                item.addEventListener("mouseenter", (e) => {
                    document
                        .querySelectorAll(".autocomplete-item")
                        .forEach((el) => {
                            el.classList.remove("bg-indigo-50");
                        });
                    (e.currentTarget as HTMLElement).classList.add(
                        "bg-indigo-50",
                    );
                });
            });
        }

        // Perform search
        const performSearch = debounce((query: string) => {
            if (!query || query.length < 2) {
                resultsContainer?.classList.add("hidden");
                return;
            }

            const results = fuse.search(query);
            displayResults(results);
        }, 300);

        // Keyboard navigation
        function handleKeyboardNav(e: KeyboardEvent) {
            if (!currentResults.length) return;

            const items = document.querySelectorAll(".autocomplete-item");

            if (e.key === "ArrowDown") {
                e.preventDefault();
                selectedIndex = Math.min(selectedIndex + 1, items.length - 1);
                updateSelection(items);
            } else if (e.key === "ArrowUp") {
                e.preventDefault();
                selectedIndex = Math.max(selectedIndex - 1, -1);
                updateSelection(items);
            } else if (e.key === "Enter") {
                e.preventDefault();
                if (selectedIndex >= 0 && items[selectedIndex]) {
                    (items[selectedIndex] as HTMLAnchorElement).click();
                }
            } else if (e.key === "Escape") {
                resultsContainer?.classList.add("hidden");
                searchInput?.blur();
            }
        }

        function updateSelection(items: NodeListOf<Element>) {
            items.forEach((item, index) => {
                if (index === selectedIndex) {
                    item.classList.add("bg-indigo-50");
                    item.scrollIntoView({
                        block: "nearest",
                        behavior: "smooth",
                    });
                } else {
                    item.classList.remove("bg-indigo-50");
                }
            });
        }

        // Event listeners
        searchInput?.addEventListener("input", (e) => {
            const query = (e.target as HTMLInputElement).value;
            performSearch(query);
        });

        searchInput?.addEventListener("keydown", handleKeyboardNav);

        searchInput?.addEventListener("focus", () => {
            if (searchInput.value.length >= 2 && currentResults.length > 0) {
                resultsContainer?.classList.remove("hidden");
            }
        });

        // Close on click outside
        document.addEventListener("click", (e) => {
            if (
                !searchInput?.contains(e.target as Node) &&
                !resultsContainer?.contains(e.target as Node)
            ) {
                resultsContainer?.classList.add("hidden");
            }
        });
    </script>
</Layout>
