---
import Layout from "../../layouts/Layout.astro";

const resources = [
    {
        title: "TMS Patient Guide",
        description:
            "Everything you need to know about TMS therapy in one comprehensive guide. From your first consultation to your final session.",
        type: "PDF Guide",
        icon: "ðŸ“˜",
        cta: "Download Free Guide",
        featured: true,
    },
    {
        title: "Insurance Authorization Checklist",
        description:
            "Step-by-step checklist to help you navigate the insurance pre-authorization process for TMS therapy.",
        type: "Checklist",
        icon: "âœ…",
        cta: "Get Checklist",
    },
    {
        title: "Questions to Ask Your Doctor",
        description:
            "25 essential questions to ask during your TMS consultation to ensure you find the right provider.",
        type: "Printable",
        icon: "â“",
        cta: "Download Questions",
    },
    {
        title: "TMS Session Tracker",
        description:
            "Track your mood, side effects, and progress throughout your TMS treatment course.",
        type: "Tracker",
        icon: "ðŸ“Š",
        cta: "Get Tracker",
    },
    {
        title: "Cost Comparison Calculator",
        description:
            "Estimate your out-of-pocket costs for TMS therapy based on your insurance and location.",
        type: "Tool",
        icon: "ðŸ’°",
        cta: "Calculate Costs",
    },
    {
        title: "Provider Research Template",
        description:
            "Organize your research on different TMS clinics with this comparison spreadsheet.",
        type: "Template",
        icon: "ðŸ“‹",
        cta: "Download Template",
    },
];

const featuredResource = resources.find((r) => r.featured);
const otherResources = resources.filter((r) => !r.featured);
---

<Layout title="Free TMS Resources & Guides | TMS List">
    <!-- Hero -->
    <section
        class="bg-gradient-to-br from-slate-900 via-indigo-900 to-blue-900 py-20"
    >
        <div class="container mx-auto px-6 text-center">
            <span
                class="inline-block px-4 py-1.5 bg-emerald-500/20 text-emerald-300 rounded-full text-sm font-bold uppercase tracking-wider mb-6"
                >Free Resources</span
            >
            <h1 class="text-4xl md:text-6xl font-black text-white mb-6">
                Patient Resources & Tools
            </h1>
            <p class="text-xl text-blue-100/80 max-w-2xl mx-auto">
                Free guides, checklists, and tools to help you navigate your TMS
                therapy journey with confidence.
            </p>
        </div>
    </section>

    <main class="container mx-auto px-6 py-16">
        <!-- Featured Resource -->
        {
            featuredResource && (
                <div class="bg-gradient-to-r from-indigo-600 to-blue-600 rounded-3xl p-8 md:p-12 mb-16 text-white relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-1/2 h-full bg-[url('/images/brain_stimulation_art_1769446474392.png')] bg-cover bg-center opacity-20" />
                    <div class="relative z-10 max-w-2xl">
                        <span class="inline-block px-3 py-1 bg-white/20 rounded-full text-sm font-bold mb-4">
                            ðŸ“˜ Featured Resource
                        </span>
                        <h2 class="text-3xl md:text-4xl font-bold mb-4">
                            {featuredResource.title}
                        </h2>
                        <p class="text-indigo-100 text-lg mb-8">
                            {featuredResource.description}
                        </p>
                        <button class="px-8 py-4 bg-white text-indigo-600 font-bold rounded-xl hover:bg-gray-100 transition-colors shadow-xl">
                            {featuredResource.cta}
                        </button>
                    </div>
                </div>
            )
        }

        <!-- Resource Grid -->
        <h2 class="text-2xl font-bold text-gray-900 mb-8">All Resources</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {
                otherResources.map((resource) => (
                    <div class="bg-white rounded-2xl border border-gray-100 p-6 hover:shadow-xl transition-all duration-300 group">
                        <div class="flex items-start gap-4 mb-4">
                            <span class="text-4xl">{resource.icon}</span>
                            <div>
                                <span class="text-xs font-bold text-indigo-600 uppercase tracking-wider">
                                    {resource.type}
                                </span>
                                <h3 class="text-xl font-bold text-gray-900 group-hover:text-indigo-600 transition-colors">
                                    {resource.title}
                                </h3>
                            </div>
                        </div>
                        <p class="text-gray-600 mb-6">{resource.description}</p>
                        <button class="w-full py-3 bg-gray-100 text-gray-700 font-bold rounded-xl hover:bg-indigo-600 hover:text-white transition-colors">
                            {resource.cta}
                        </button>
                    </div>
                ))
            }
        </div>

        <!-- Lead Capture CTA -->
        <div
            class="mt-20 bg-gray-50 rounded-3xl p-10 text-center border border-gray-100"
        >
            <h3 class="text-3xl font-bold text-gray-900 mb-4">
                Need Personalized Help?
            </h3>
            <p class="text-gray-600 mb-8 max-w-xl mx-auto">
                Take our eligibility quiz to find out if TMS is right for you,
                or browse our directory to find verified clinics near you.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                    href="/quiz/am-i-a-candidate/"
                    class="px-8 py-4 bg-indigo-600 text-white font-bold rounded-xl hover:bg-indigo-700 transition-colors"
                    >Take Eligibility Quiz</a
                >
                <a
                    href="/us/"
                    class="px-8 py-4 bg-white border-2 border-gray-200 text-gray-700 font-bold rounded-xl hover:border-indigo-600 hover:text-indigo-600 transition-colors"
                    >Find a Clinic</a
                >
            </div>
        </div>
    </main>
</Layout>
